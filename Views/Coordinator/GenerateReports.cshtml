                </div>
            </div>
        </div>
    </div>

    <!-- Charts Section -->
    <div class="row mb-4">
        <div class="col-lg-6 mb-4">
            <div class="card coordinator-card h-100">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-pie me-2"></i>Claims Status Distribution
                    </h5>
                </div>
                <div class="card-body">
                    <canvas id="statusChart" height="250"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-4">
            <div class="card coordinator-card h-100">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-line me-2"></i>Monthly Trends
                    </h5>
                </div>
                <div class="card-body">
                    <canvas id="trendsChart" height="250"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Department Distribution -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card coordinator-card">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-building me-2"></i>Department Distribution
                    </h5>
                </div>
                <div class="card-body">
                    <canvas id="departmentChart" height="150"></canvas>
                </div>
            </div>
