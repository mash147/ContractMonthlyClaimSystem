@model CoordinatorReportViewModel
@{
    ViewData["Title"] = "Generate Reports";
}

<!-- Display Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Page Header -->
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Generate Reports</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button type="button" class="btn btn-sm btn-outline-secondary" onclick="window.print()">
                <i class="fas fa-print me-1"></i>Print
            </button>
            <button type="button" class="btn btn-sm btn-outline-secondary" id="refreshReport">
                <i class="fas fa-sync-alt me-1"></i>Refresh
            </button>
        </div>
    </div>
</div>

<!-- Report Configuration -->
<div class="row mb-4">
    <div class="col-lg-8">
        <div class="card coordinator-card">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0"><i class="fas fa-cog me-2"></i>Report Configuration</h5>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="autoRefreshToggle" checked>
                    <label class="form-check-label small" for="autoRefreshToggle">Auto-refresh</label>
                </div>
            </div>
            <div class="card-body">
                <form method="post" asp-action="GenerateReport" id="reportForm">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Report Type</label>
                            <select class="form-select" name="ReportType" id="reportType">
                                <option value="Monthly" selected="@(Model.ReportType == "Monthly")">Monthly Report</option>
                                <option value="Weekly" selected="@(Model.ReportType == "Weekly")">Weekly Report</option>
                                <option value="Quarterly" selected="@(Model.ReportType == "Quarterly")">Quarterly Report</option>
                                <option value="Custom" selected="@(Model.ReportType == "Custom")">Custom Report</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Department</label>
                            <select class="form-select" name="Department" id="department">
                                @foreach (var dept in ViewBag.Departments)
                                {
                                    <option value="@dept" selected="@(dept == Model.Department)">@dept</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Start Date</label>
                            <input type="date" class="form-control" name="StartDate" id="startDate"
                                   value="@Model.StartDate.ToString("yyyy-MM-dd")">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">End Date</label>
                            <input type="date" class="form-control" name="EndDate" id="endDate"
                                   value="@Model.EndDate.ToString("yyyy-MM-dd")">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary w-100" id="generateReportBtn">
                                <i class="fas fa-chart-bar me-1"></i>Generate Report
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <!-- Quick Reports -->
        <div class="card coordinator-card mb-4">
            <div class="card-header bg-white">
                <h6 class="card-title mb-0"><i class="fas fa-bolt me-2"></i>Quick Reports</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="@Url.Action("GenerateReports", new { reportType = "Weekly", startDate = DateTime.Now.AddDays(-7).ToString("yyyy-MM-dd"), endDate = DateTime.Now.ToString("yyyy-MM-dd") })"
                       class="btn btn-outline-primary text-start quick-report-btn">
                        <i class="fas fa-calendar-week me-2"></i>Last 7 Days
                    </a>
                    <a href="@Url.Action("GenerateReports", new { reportType = "Monthly", startDate = DateTime.Now.AddDays(-30).ToString("yyyy-MM-dd"), endDate = DateTime.Now.ToString("yyyy-MM-dd") })"
                       class="btn btn-outline-primary text-start quick-report-btn">
                        <i class="fas fa-calendar-alt me-2"></i>Last 30 Days
                    </a>
                    <a href="@Url.Action("GenerateReports", new { reportType = "Monthly", startDate = new DateTime(DateTime.Now.Year, DateTime.Now.Month, 1).ToString("yyyy-MM-dd"), endDate = DateTime.Now.ToString("yyyy-MM-dd") })"
                       class="btn btn-outline-primary text-start quick-report-btn">
                        <i class="fas fa-calendar me-2"></i>This Month
                    </a>
                    <a href="@Url.Action("GenerateReports", new { reportType = "Quarterly", startDate = new DateTime(DateTime.Now.Year, 1, 1).ToString("yyyy-MM-dd"), endDate = DateTime.Now.ToString("yyyy-MM-dd") })"
                       class="btn btn-outline-primary text-start quick-report-btn">
                        <i class="fas fa-chart-line me-2"></i>Year to Date
                    </a>
                </div>
            </div>
        </div>

        <!-- Export Options -->
        <div class="card coordinator-card">
            <div class="card-header bg-white">
                <h6 class="card-title mb-0"><i class="fas fa-download me-2"></i>Export Options</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <button type="button" class="btn btn-danger" id="exportPdfBtn">
                        <i class="fas fa-file-pdf me-2"></i>Export as PDF
                    </button>
                    <button type="button" class="btn btn-success" id="exportExcelBtn">
                        <i class="fas fa-file-excel me-2"></i>Export as Excel
                    </button>
                    <button type="button" class="btn btn-info" id="exportJsonBtn">
                        <i class="fas fa-file-code me-2"></i>Export as JSON
                    </button>
                </div>
            </div>
        </div>

        <!-- Report Info -->
        <div class="card coordinator-card mt-4">
            <div class="card-header bg-white">
                <h6 class="card-title mb-0"><i class="fas fa-info-circle me-2"></i>Report Information</h6>
            </div>
            <div class="card-body">
                <div class="small">
                    <div class="mb-2">
                        <strong>Date Range:</strong><br>
                        @Model.StartDate.ToString("dd MMM yyyy") - @Model.EndDate.ToString("dd MMM yyyy")
                    </div>
                    <div class="mb-2">
                        <strong>Department:</strong><br>
                        @Model.Department
                    </div>
                    <div>
                        <strong>Generated:</strong><br>
                        @DateTime.Now.ToString("dd MMM yyyy HH:mm")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Loading Indicator -->
<div class="row mb-4" id="loadingIndicator" style="display: none;">
    <div class="col-12">
        <div class="card coordinator-card">
            <div class="card-body text-center py-4">
                <div class="spinner-border text-primary mb-3" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <h5>Generating Report...</h5>
                <p class="text-muted">Please wait while we process your data.</p>
            </div>
        </div>
    </div>
</div>

