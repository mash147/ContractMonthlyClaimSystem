@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Chart instances
        let statusChart, trendsChart, departmentChart;

        $(document).ready(function() {
            // Initialize charts if data exists
            @if (Model.Claims != null && Model.Claims.Any())
            {
                    <text>
                    initializeCharts();
                    </text>
            }

            // Report type change handler
            $('#reportType').change(function() {
                updateDateRange();
            });

            // Generate report button handler
            $('#generateReportBtn').click(function(e) {
                e.preventDefault();
                generateReport();
            });

            // Export buttons
            $('#exportPdfBtn').click(function() {
                exportReport('PDF');
            });

            $('#exportExcelBtn').click(function() {
                exportReport('Excel');
            });

            $('#exportJsonBtn').click(function() {
                exportReport('JSON');
            });

            // Refresh report
            $('#refreshReport').click(function() {
                generateReport();
            });

            // Table search functionality
            $('#toggleSearchBtn').click(function() {
                $('#searchBox').toggle();
            });

            $('#tableSearch').on('input', function() {
                const searchText = $(this).val().toLowerCase();
                $('#claimsTable tbody tr').each(function() {
                    const rowText = $(this).text().toLowerCase();
                    $(this).toggle(rowText.includes(searchText));
                });
            });

            $('#clearSearch').click(function() {
                $('#tableSearch').val('').trigger('input');
            });

            // Auto-refresh functionality
            let autoRefreshInterval;
            $('#autoRefreshToggle').change(function() {
                if (this.checked) {
                    autoRefreshInterval = setInterval(updateReportData, 30000); // 30 seconds
                } else {
                    clearInterval(autoRefreshInterval);
                }
            });

            // Initialize auto-refresh if enabled
            if ($('#autoRefreshToggle').is(':checked')) {
                autoRefreshInterval = setInterval(updateReportData, 30000);
            }

            // Export table data
            $('#exportTableBtn').click(function() {
                exportTableToCSV();
            });
        });

        function updateDateRange() {
            const reportType = $('#reportType').val();
            const now = new Date();
            let startDate, endDate;

            switch (reportType) {
                case 'Weekly':
                    startDate = new Date(now.getTime() - 7 * 24 * 60 * 60 * 1000);
                    break;
                case 'Monthly':
                    startDate = new Date(now.getFullYear(), now.getMonth(), 1);
                    break;
                case 'Quarterly':
                    const quarter = Math.floor(now.getMonth() / 3);
                    startDate = new Date(now.getFullYear(), quarter * 3, 1);
                    break;
                case 'Custom':
                    startDate = new Date(now.getTime() - 30 * 24 * 60 * 60 * 1000);
                    break;
            }

            endDate = now;

            $('#startDate').val(formatDate(startDate));
            $('#endDate').val(formatDate(endDate));
        }

        function formatDate(date) {
            return date.toISOString().split('T')[0];
        }

        function generateReport() {
            $('#loadingIndicator').show();
            $('#generateReportBtn').prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-1"></i>Generating...');

            $('#reportForm').submit();
        }

        function exportReport(format) {
            const reportType = $('#reportType').val();
            const startDate = $('#startDate').val();
            const endDate = $('#endDate').val();
            const department = $('#department').val();

            let url = '';
            if (format === 'JSON') {
                url = '@Url.Action("GetReportData")' +
                      `?reportType=${reportType}&startDate=${startDate}&endDate=${endDate}&department=${department}`;

                // For JSON, download directly
                window.location.href = url;
            } else {
                url = '@Url.Action("ExportReport")' +
                      `?reportType=${reportType}&startDate=${startDate}&endDate=${endDate}&department=${department}&format=${format}`;

                window.open(url, '_blank');
            }
        }

        function updateReportData() {
            const reportType = $('#reportType').val();
            const startDate = $('#startDate').val();
            const endDate = $('#endDate').val();
            const department = $('#department').val();

            $.get('@Url.Action("GetReportData")', {
                reportType: reportType,
                startDate: startDate,
                endDate: endDate,
                department: department
            }, function(data) {
                if (data.success) {
                    updateCharts(data.data);
                    $('#lastUpdated').text(new Date().toLocaleTimeString());
                }
            });
        }

        function initializeCharts() {
            // Status Distribution Chart
            const statusCtx = document.getElementById('statusChart').getContext('2d');
            statusChart = new Chart(statusCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Approved', 'Pending', 'Under Review', 'Rejected', 'Revision Requested'],
                    datasets: [{
                        data: [@Model.ApprovedClaims, @Model.PendingClaims, @Model.UnderReviewClaims, @Model.RejectedClaims, @Model.Claims.Count(c => c.Status == "Revision Requested")],
                        backgroundColor: ['#28a745', '#ffc107', '#17a2b8', '#dc3545', '#6c757d'],
                        borderWidth: 2,
                        borderColor: '#fff'
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const label = context.label || '';
                                    const value = context.raw || 0;
                                    const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                    const percentage = Math.round((value / total) * 100);
                                    return `${label}: ${value} (${percentage}%)`;
                                }
                            }
                        }
                    }
                }
            });

            // Sample trends chart - you would replace this with actual data from your controller
            const trendsCtx = document.getElementById('trendsChart').getContext('2d');
            trendsChart = new Chart(trendsCtx, {
                type: 'line',
                data: {
