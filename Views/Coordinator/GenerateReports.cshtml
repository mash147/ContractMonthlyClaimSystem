                                    <h4>@Model.AverageClaimAmount.ToString("C")</h4>
                                    <small class="text-muted">Avg. Claim Amount</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-body text-center">
                                    <i class="fas fa-file-invoice-dollar fa-2x text-primary mb-2"></i>
                                    <h4>@Model.Claims.Count(c => c.SupportingDocuments?.Any() == true)</h4>
                                    <small class="text-muted">Claims with Documents</small>
                                </div>
                            </div>
