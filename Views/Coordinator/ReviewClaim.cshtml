@model Claim
@{
    ViewData["Title"] = "Review Claim";
}

<!-- Page Header -->
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Review Claim #@Model.ClaimID</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="@Url.Action("ReviewClaims")" class="btn btn-sm btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Back to Claims
        </a>
    </div>
</div>

<div class="row">
    <!-- Claim Details -->
    <div class="col-lg-8">
        <div class="card coordinator-card mb-4">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0"><i class="fas fa-info-circle me-2"></i>Claim Details</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-sm">
                            <tr>
                                <th>Lecturer:</th>
                                <td>@Model.Lecturer?.Name</td>
                            </tr>
                            <tr>
                                <th>Department:</th>
                                <td>@Model.Lecturer?.Department</td>
                            </tr>
                            <tr>
                                <th>Hourly Rate:</th>
                                <td>@Model.Lecturer?.HourlyRate.ToString("C")</td>
                            </tr>
                            <tr>
                                <th>Contact Email:</th>
                                <td>@Model.Lecturer?.User?.Email</td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <table class="table table-sm">
                            <tr>
                                <th>Hours Worked:</th>
                                <td>@Model.HoursWorked</td>
                            </tr>
                            <tr>
                                <th>Total Amount:</th>
                                <td class="fw-bold text-success">@Model.Amount.ToString("C")</td>
                            </tr>
                            <tr>
                                <th>Submitted:</th>
                                <td>@Model.SubmissionDate.ToString("dd MMMM yyyy")</td>
                            </tr>
                        </table>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.AdditionalNotes))
                {
                    <div class="mt-3">
                        <label class="form-label fw-bold">Lecturer's Notes:</label>
                        <div class="border rounded p-3 bg-light">
                            @Model.AdditionalNotes
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Supporting Documents -->
        <div class="card coordinator-card mb-4">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="fas fa-file me-2"></i>Supporting Documents
                    <span class="badge bg-primary ms-2">@(Model.SupportingDocuments?.Count ?? 0)</span>
                </h5>
                <div class="btn-group">
                    <a href="@Url.Action("VerifyDocuments", new { claimId = Model.ClaimID })" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-external-link-alt me-1"></i>Verify Documents
                    </a>
                    @if (Model.SupportingDocuments?.Any() == true)
                    {
                        <button type="button" class="btn btn-sm btn-outline-success" onclick="verifyAllDocuments()">
                            <i class="fas fa-check-double me-1"></i>Verify All
                        </button>
                    }
                </div>
            </div>
            <div class="card-body">
                @if (Model.SupportingDocuments?.Any() == true)
                {
                    <div class="list-group">
                        @foreach (var doc in Model.SupportingDocuments)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div class="flex-grow-1">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-file-@GetFileIcon(doc.FileName) text-primary me-3 fa-lg"></i>
                                        <div>
                                            <h6 class="mb-1">@doc.FileName</h6>
                                            <small class="text-muted">
                                                Uploaded: @doc.UploadedDate.ToString("dd MMM yyyy HH:mm")
                                            </small>
                                        </div>
                                    </div>
                                </div>
                                <div class="btn-group ms-3">
                                    <a href="@Url.Action("DownloadDocument", new { documentId = doc.DocumentID })"
                                       class="btn btn-sm btn-outline-primary" data-bs-toggle="tooltip" title="Download">
                                        <i class="fas fa-download"></i>
                                    </a>
                                    <button class="btn btn-sm btn-outline-success verify-doc"
                                            data-doc-id="@doc.DocumentID"
                                            data-doc-name="@doc.FileName"
                                            data-bs-toggle="tooltip" title="Verify Document">
                                        <i class="fas fa-check"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-warning revision-doc"
                                            data-doc-id="@doc.DocumentID"
                                            data-doc-name="@doc.FileName"
                                            data-bs-toggle="tooltip" title="Request Document Revision">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-file-excel fa-3x text-warning mb-3"></i>
                        <h5 class="text-warning">No Supporting Documents</h5>
                        <p class="text-muted mb-3">This claim has no supporting documents uploaded.</p>
                        <form method="post" asp-action="RequestRevision">
                            <input type="hidden" name="claimId" value="@Model.ClaimID" />
                            <input type="hidden" name="revisionReason" value="No supporting documents provided. Please upload required documents." />
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-edit me-1"></i>Request Documents
                            </button>
                        </form>
                    </div>
                }
            </div>
        </div>

        <!-- Claim Verification Checklist -->
        <div class="card coordinator-card mb-4">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0"><i class="fas fa-clipboard-check me-2"></i>Verification Checklist</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="checkDocuments">
                            <label class="form-check-label" for="checkDocuments">
                                All required documents are present and valid
                            </label>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="checkHours">
                            <label class="form-check-label" for="checkHours">
                                Hours worked match the claim period
                            </label>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="checkCalculations">
                            <label class="form-check-label" for="checkCalculations">
                                Amount calculations are correct
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="checkDates">
                            <label class="form-check-label" for="checkDates">
                                Dates and periods are accurate
                            </label>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="checkCompliance">
                            <label class="form-check-label" for="checkCompliance">
                                Claim complies with department policies
                            </label>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="checkComplete">
                            <label class="form-check-label" for="checkComplete">
                                All information is complete and accurate
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Audit Trail -->
        <div class="card coordinator-card">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0"><i class="fas fa-history me-2"></i>Activity History</h5>
            </div>
            <div class="card-body">
                <div class="timeline">
                    @foreach (var audit in Model.AuditTrails.OrderByDescending(a => a.Timestamp))
                    {
                        <div class="timeline-item">
                            <div class="timeline-marker bg-@GetAuditColor(audit.Action)"></div>
                            <div class="timeline-content">
                                <div class="timeline-header">
                                    <strong>@audit.Action</strong>
                                    <span class="timeline-date">@audit.Timestamp.ToString("dd MMM yyyy HH:mm")</span>
                                </div>
                                <div class="timeline-body">
                                    <small class="text-muted">By: @audit.User?.FullName</small>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Action Panel -->
    <div class="col-lg-4">
        <!-- Review Status -->
        <div class="card coordinator-card mb-4">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0"><i class="fas fa-tasks me-2"></i>Review Status</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label fw-bold">Current Status:</label>
                    <div>
                        <span class="badge @GetStatusBadgeClass(Model.Status) fs-6">@Model.Status</span>
                    </div>
                </div>

                @if (Model.Status == "Pending" || Model.Status == "Revision Requested")
                {
                    <form method="post" asp-action="SetUnderReview">
                        <input type="hidden" name="claimId" value="@Model.ClaimID" />
                        <button type="submit" class="btn btn-info w-100 mb-3">
                            <i class="fas fa-search me-1"></i>Mark as Under Review
                        </button>
                    </form>
                }

                <div class="progress mb-3" style="height: 8px;">
                    @{
                        var progress = Model.Status switch
                        {
                            "Pending" => 25,
                            "Under Review" => 50,
                            "Revision Requested" => 75,
                            "Coordinator Approved" => 100,
                            _ => 0
                        };
                    }
                    <div class="progress-bar bg-success" role="progressbar" style="width: @progress%"></div>
                </div>
                <small class="text-muted">Review Progress: @progress%</small>
            </div>
        </div>

        <!-- Forward to Manager -->
        <div class="card coordinator-card mb-4">
            <div class="card-header bg-success text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-paper-plane me-2"></i>Forward to Manager
                </h5>
            </div>
            <div class="card-body">
                <p class="small text-muted mb-3">
                    Forward this claim to the Program Manager for final approval after completing your review.
                </p>
                <form method="post" asp-action="ForwardToManager">
                    <input type="hidden" name="claimId" value="@Model.ClaimID" />
                    <div class="mb-3">
                        <label class="form-label">Review Notes (Optional):</label>
                        <textarea name="notes" class="form-control" rows="3"
                                  placeholder="Add any notes or comments for the manager..."></textarea>
                        <div class="form-text">
                            These notes will be visible to the Program Manager.
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success w-100"
                            onclick="return confirm('Are you sure you want to forward this claim to the Program Manager?')">
                        <i class="fas fa-paper-plane me-1"></i>Forward to Manager
                    </button>
                </form>
            </div>
        </div>

        <!-- Request Revision -->
        <div class="card coordinator-card mb-4">
            <div class="card-header bg-warning text-dark">
                <h5 class="card-title mb-0">
                    <i class="fas fa-edit me-2"></i>Request Revision
                </h5>
            </div>
            <div class="card-body">
                <p class="small text-muted mb-3">
                    Request the lecturer to revise this claim if there are issues or missing information.
                </p>
                <form method="post" asp-action="RequestRevision">
                    <input type="hidden" name="claimId" value="@Model.ClaimID" />
                    <div class="mb-3">
                        <label class="form-label">Revision Reason *:</label>
                        <textarea name="revisionReason" class="form-control" rows="3" required
                                  placeholder="Explain what needs to be revised or corrected..."></textarea>
                        <div class="form-text">
                            This reason will be sent to the lecturer.
                        </div>
                    </div>
                    <button type="submit" class="btn btn-warning w-100"
                            onclick="return confirm('Are you sure you want to request revision for this claim?')">
                        <i class="fas fa-redo me-1"></i>Request Revision
                    </button>
                </form>
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="card coordinator-card">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0"><i class="fas fa-chart-bar me-2"></i>Claim Summary</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6 mb-3">
                        <div class="text-primary fw-bold fs-5">@Model.HoursWorked</div>
                        <small class="text-muted">Hours</small>
                    </div>
                    <div class="col-6 mb-3">
                        <div class="text-success fw-bold fs-5">@Model.Amount.ToString("C")</div>
                        <small class="text-muted">Amount</small>
                    </div>
                    <div class="col-6">
                        <div class="text-info fw-bold fs-5">@(Model.SupportingDocuments?.Count ?? 0)</div>
                        <small class="text-muted">Documents</small>
                    </div>
                    <div class="col-6">
                        <div class="text-warning fw-bold fs-5">@Model.AuditTrails.Count</div>
                        <small class="text-muted">Activities</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Document Verification Modal -->
<div class="modal fade" id="verifyDocModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-check-circle text-success me-2"></i>Verify Document
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="verifyDocForm" method="post" asp-action="VerifyDocument">
                <div class="modal-body">
                    <input type="hidden" name="documentId" id="verifyDocId">
                    <input type="hidden" name="isValid" id="verifyIsValid" value="true">
                    <div class="mb-3">
                        <label class="form-label">Document:</label>
                        <p class="form-control-plaintext fw-bold" id="verifyDocName"></p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Verification Notes (Optional):</label>
                        <textarea name="notes" class="form-control" rows="3"
                                  placeholder="Add verification notes..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Verify Document</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Document Revision Modal -->
<div class="modal fade" id="revisionDocModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-edit text-warning me-2"></i>Request Document Revision
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="revisionDocForm" method="post" asp-action="RequestDocumentRevision">
                <div class="modal-body">
                    <input type="hidden" name="documentId" id="revisionDocId">
                    <input type="hidden" name="claimId" value="@Model.ClaimID">
                    <div class="mb-3">
                        <label class="form-label">Document:</label>
                        <p class="form-control-plaintext fw-bold" id="revisionDocName"></p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Revision Reason *:</label>
                        <textarea name="revisionReason" class="form-control" rows="3" required
                                  placeholder="Explain why this document needs revision..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">Request Revision</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Document verification
            $('.verify-doc').click(function() {
                var docId = $(this).data('doc-id');
                var docName = $(this).data('doc-name');

                $('#verifyDocId').val(docId);
                $('#verifyDocName').text(docName);
                $('#verifyIsValid').val('true');

                $('#verifyDocModal').modal('show');
            });

            // Document revision request
            $('.revision-doc').click(function() {
                var docId = $(this).data('doc-id');
                var docName = $(this).data('doc-name');

                $('#revisionDocId').val(docId);
                $('#revisionDocName').text(docName);

                $('#revisionDocModal').modal('show');
            });
        });

        function verifyAllDocuments() {
            if (confirm('Are you sure you want to mark all documents as verified?')) {
                // This would typically make an API call to verify all documents
                alert('All documents marked as verified!');
            }
        }
    </script>
}

<style>
