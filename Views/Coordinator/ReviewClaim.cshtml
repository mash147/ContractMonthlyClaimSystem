@model Claim
@{
    ViewData["Title"] = "Review Claim";
}

<!-- Display Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Page Header -->
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Review Claim #@Model.ClaimID</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="@Url.Action("ReviewClaims")" class="btn btn-sm btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Back to Claims
        </a>
    </div>
</div>

<div class="row">
    <!-- Claim Details -->
    <div class="col-lg-8">
        <div class="card coordinator-card mb-4">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0"><i class="fas fa-info-circle me-2"></i>Claim Details</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-sm">
                            <tr>
                                <th>Lecturer:</th>
                                <td>@Model.Lecturer?.Name</td>
                            </tr>
                            <tr>
                                <th>Department:</th>
                                <td>@Model.Lecturer?.Department</td>
                            </tr>
                            <tr>
                                <th>Hourly Rate:</th>
                                <td>@Model.Lecturer?.HourlyRate.ToString("C")</td>
                            </tr>
                            <tr>
                                <th>Contact Email:</th>
                                <td>@Model.Lecturer?.User?.Email</td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <table class="table table-sm">
                            <tr>
                                <th>Hours Worked:</th>
                                <td>@Model.HoursWorked</td>
                            </tr>
                            <tr>
                                <th>Total Amount:</th>
                                <td class="fw-bold text-success">@Model.Amount.ToString("C")</td>
                            </tr>
                            <tr>
                                <th>Submitted:</th>
                                <td>@Model.SubmissionDate.ToString("dd MMMM yyyy")</td>
                            </tr>
                            <tr>
                                <th>Status:</th>
                                <td><span class="badge @GetStatusBadgeClass(Model.Status)">@Model.Status</span></td>
                            </tr>
                        </table>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.AdditionalNotes))
                {
                    <div class="mt-3">
                        <label class="form-label fw-bold">Lecturer's Notes:</label>
                        <div class="border rounded p-3 bg-light">
                            @Html.Raw(Model.AdditionalNotes.Replace("\n", "<br>"))
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Supporting Documents -->
        <div class="card coordinator-card mb-4">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="fas fa-file me-2"></i>Supporting Documents
                    <span class="badge bg-primary ms-2">@(Model.SupportingDocuments?.Count ?? 0)</span>
                </h5>
                <div class="btn-group">
                    <a href="@Url.Action("VerifyDocuments", new { claimId = Model.ClaimID })" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-external-link-alt me-1"></i>Verify Documents
                    </a>
                    @if (Model.SupportingDocuments?.Any() == true)
                    {
                        <button type="button" class="btn btn-sm btn-outline-success" data-bs-toggle="modal" data-bs-target="#verifyAllModal">
                            <i class="fas fa-check-double me-1"></i>Verify All
                        </button>
                    }
                </div>
            </div>
            <div class="card-body">
                @if (Model.SupportingDocuments?.Any() == true)
                {
                    <div class="list-group">
                        @foreach (var doc in Model.SupportingDocuments)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div class="flex-grow-1">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-file-@GetFileIcon(doc.FileName) text-primary me-3 fa-lg"></i>
                                        <div>
                                            <h6 class="mb-1">@doc.FileName</h6>
                                            <small class="text-muted">
                                                Uploaded: @doc.UploadedDate.ToString("dd MMM yyyy HH:mm")
                                            </small>
                                        </div>
                                    </div>
                                </div>
                                <div class="btn-group ms-3">
                                    <a href="@Url.Action("DownloadDocument", new { documentId = doc.DocumentID })"
                                       class="btn btn-sm btn-outline-primary" data-bs-toggle="tooltip" title="Download">
                                        <i class="fas fa-download"></i>
                                    </a>
                                    <button class="btn btn-sm btn-outline-success verify-doc"
                                            data-doc-id="@doc.DocumentID"
                                            data-doc-name="@doc.FileName"
                                            data-bs-toggle="tooltip" title="Verify Document">
                                        <i class="fas fa-check"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-warning revision-doc"
                                            data-doc-id="@doc.DocumentID"
                                            data-doc-name="@doc.FileName"
                                            data-bs-toggle="tooltip" title="Request Document Revision">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-file-excel fa-3x text-warning mb-3"></i>
                        <h5 class="text-warning">No Supporting Documents</h5>
                        <p class="text-muted mb-3">This claim has no supporting documents uploaded.</p>
                        <form method="post" asp-action="RequestRevision">
                            <input type="hidden" name="claimId" value="@Model.ClaimID" />
                            <input type="hidden" name="revisionReason" value="No supporting documents provided. Please upload required documents." />
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-edit me-1"></i>Request Documents
                            </button>
                        </form>
                    </div>
                }
            </div>
        </div>

        <!-- Claim Verification Checklist -->
        <div class="card coordinator-card mb-4">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0"><i class="fas fa-clipboard-check me-2"></i>Verification Checklist</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-check mb-3">
                            <input class="form-check-input checklist-item" type="checkbox" id="checkDocuments" data-checklist="documents">
                            <label class="form-check-label" for="checkDocuments">
                                All required documents are present and valid
                            </label>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input checklist-item" type="checkbox" id="checkHours" data-checklist="hours">
                            <label class="form-check-label" for="checkHours">
                                Hours worked match the claim period
                            </label>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input checklist-item" type="checkbox" id="checkCalculations" data-checklist="calculations">
                            <label class="form-check-label" for="checkCalculations">
                                Amount calculations are correct
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-check mb-3">
                            <input class="form-check-input checklist-item" type="checkbox" id="checkDates" data-checklist="dates">
                            <label class="form-check-label" for="checkDates">
                                Dates and periods are accurate
                            </label>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input checklist-item" type="checkbox" id="checkCompliance" data-checklist="compliance">
                            <label class="form-check-label" for="checkCompliance">
                                Claim complies with department policies
                            </label>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input checklist-item" type="checkbox" id="checkComplete" data-checklist="complete">
                            <label class="form-check-label" for="checkComplete">
                                All information is complete and accurate
                            </label>
                        </div>
                    </div>
                </div>
                <div class="mt-3">
                    <div class="progress" style="height: 10px;">
                        <div class="progress-bar bg-success" role="progressbar" id="checklistProgress" style="width: 0%"></div>
                    </div>
                    <small class="text-muted" id="checklistStatus">0 of 6 items completed</small>
                </div>
            </div>
        </div>

        <!-- Audit Trail -->
        <div class="card coordinator-card">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0"><i class="fas fa-history me-2"></i>Activity History</h5>
            </div>
            <div class="card-body">
                <div class="timeline">
                    @if (Model.AuditTrails.Any())
                    {
                        @foreach (var audit in Model.AuditTrails.OrderByDescending(a => a.Timestamp))
                        {
                            <div class="timeline-item">
                                <div class="timeline-marker bg-@GetAuditColor(audit.Action)"></div>
                                <div class="timeline-content">
                                    <div class="timeline-header">
                                        <strong>@audit.Action</strong>
                                        <span class="timeline-date">@audit.Timestamp.ToString("dd MMM yyyy HH:mm")</span>
                                    </div>
                                    <div class="timeline-body">
                                        <small class="text-muted">By: @audit.User?.FullName</small>
                                        @if (!string.IsNullOrEmpty(audit.Description))
                                        {
                                            <div class="mt-1">
                                                <small class="text-muted">@audit.Description</small>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="fas fa-info-circle fa-2x text-muted mb-2"></i>
                            <p class="text-muted mb-0">No activity history available</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Action Panel -->
    <div class="col-lg-4">
        <!-- Review Status -->
        <div class="card coordinator-card mb-4">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0"><i class="fas fa-tasks me-2"></i>Review Status</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label fw-bold">Current Status:</label>
                    <div>
                        <span class="badge @GetStatusBadgeClass(Model.Status) fs-6">@Model.Status</span>
                    </div>
                </div>

                @if (Model.Status == "Pending" || Model.Status == "Revision Requested")
                {
                    <form method="post" asp-action="SetUnderReview" class="mb-3">
                        <input type="hidden" name="claimId" value="@Model.ClaimID" />
                        <button type="submit" class="btn btn-info w-100">
                            <i class="fas fa-search me-1"></i>Mark as Under Review
                        </button>
                    </form>
                }

                <div class="progress mb-3" style="height: 8px;">
                    @{
                        var progress = Model.Status switch
                        {
                            "Pending" => 25,
                            "Under Review" => 50,
                            "Revision Requested" => 75,
                            "Coordinator Approved" => 100,
                            _ => 0
                        };
                    }
                    <div class="progress-bar bg-success" role="progressbar" style="width: @progress%"></div>
                </div>
                <small class="text-muted">Review Progress: @progress%</small>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="card coordinator-card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-bolt me-2"></i>Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <form method="post" asp-action="QuickApproveFromReview" class="mb-2">
                    <input type="hidden" name="claimId" value="@Model.ClaimID" />
                    <button type="submit" class="btn btn-success w-100"
                            onclick="return confirm('Are you sure you want to approve this claim?')">
                        <i class="fas fa-check me-1"></i>Approve Claim
                    </button>
                </form>

                <button type="button" class="btn btn-danger w-100" data-bs-toggle="modal" data-bs-target="#quickRejectModal">
                    <i class="fas fa-times me-1"></i>Reject Claim
                </button>
            </div>
        </div>

        <!-- Forward to Manager -->
        <div class="card coordinator-card mb-4">
            <div class="card-header bg-success text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-paper-plane me-2"></i>Forward to Manager
                </h5>
            </div>
            <div class="card-body">
                <p class="small text-muted mb-3">
                    Forward this claim to the Program Manager for final approval after completing your review.
                </p>
                <form method="post" asp-action="ForwardToManager">
                    <input type="hidden" name="claimId" value="@Model.ClaimID" />
                    <div class="mb-3">
                        <label class="form-label">Review Notes (Optional):</label>
                        <textarea name="notes" class="form-control" rows="3"
                                  placeholder="Add any notes or comments for the manager..."></textarea>
                        <div class="form-text">
                            These notes will be visible to the Program Manager.
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success w-100"
                            onclick="return confirm('Are you sure you want to forward this claim to the Program Manager?')">
                        <i class="fas fa-paper-plane me-1"></i>Forward to Manager
                    </button>
                </form>
            </div>
        </div>

        <!-- Request Revision -->
        <div class="card coordinator-card mb-4">
            <div class="card-header bg-warning text-dark">
                <h5 class="card-title mb-0">
                    <i class="fas fa-edit me-2"></i>Request Revision
                </h5>
            </div>
            <div class="card-body">
                <p class="small text-muted mb-3">
                    Request the lecturer to revise this claim if there are issues or missing information.
                </p>
                <form method="post" asp-action="RequestRevision">
                    <input type="hidden" name="claimId" value="@Model.ClaimID" />
                    <div class="mb-3">
                        <label class="form-label">Revision Reason *:</label>
                        <textarea name="revisionReason" class="form-control" rows="3" required
                                  placeholder="Explain what needs to be revised or corrected..."></textarea>
                        <div class="form-text">
                            This reason will be sent to the lecturer.
                        </div>
                    </div>
                    <button type="submit" class="btn btn-warning w-100"
                            onclick="return confirm('Are you sure you want to request revision for this claim?')">
                        <i class="fas fa-redo me-1"></i>Request Revision
                    </button>
                </form>
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="card coordinator-card">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0"><i class="fas fa-chart-bar me-2"></i>Claim Summary</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6 mb-3">
                        <div class="text-primary fw-bold fs-5">@Model.HoursWorked</div>
                        <small class="text-muted">Hours</small>
                    </div>
                    <div class="col-6 mb-3">
                        <div class="text-success fw-bold fs-5">@Model.Amount.ToString("C")</div>
                        <small class="text-muted">Amount</small>
                    </div>
                    <div class="col-6">
                        <div class="text-info fw-bold fs-5">@(Model.SupportingDocuments?.Count ?? 0)</div>
                        <small class="text-muted">Documents</small>
                    </div>
                    <div class="col-6">
                        <div class="text-warning fw-bold fs-5">@Model.AuditTrails.Count</div>
                        <small class="text-muted">Activities</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Document Verification Modal -->
<div class="modal fade" id="verifyDocModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-check-circle text-success me-2"></i>Verify Document
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="verifyDocForm" method="post" asp-action="VerifyDocument">
                <div class="modal-body">
                    <input type="hidden" name="documentId" id="verifyDocId">
                    <input type="hidden" name="isValid" id="verifyIsValid" value="true">
                    <div class="mb-3">
                        <label class="form-label">Document:</label>
                        <p class="form-control-plaintext fw-bold" id="verifyDocName"></p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Verification Notes (Optional):</label>
                        <textarea name="notes" class="form-control" rows="3"
                                  placeholder="Add verification notes..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Verify Document</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Document Revision Modal -->
<div class="modal fade" id="revisionDocModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-edit text-warning me-2"></i>Request Document Revision
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="revisionDocForm" method="post" asp-action="RequestDocumentRevision">
                <div class="modal-body">
                    <input type="hidden" name="documentId" id="revisionDocId">
                    <input type="hidden" name="claimId" value="@Model.ClaimID">
                    <div class="mb-3">
                        <label class="form-label">Document:</label>
                        <p class="form-control-plaintext fw-bold" id="revisionDocName"></p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Revision Reason *:</label>
                        <textarea name="revisionReason" class="form-control" rows="3" required
                                  placeholder="Explain why this document needs revision..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">Request Revision</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Verify All Documents Modal -->
<div class="modal fade" id="verifyAllModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-check-double text-success me-2"></i>Verify All Documents
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-action="VerifyAllDocuments">
                <div class="modal-body">
                    <input type="hidden" name="claimId" value="@Model.ClaimID">
                    <div class="mb-3">
                        <p>You are about to verify all <strong>@(Model.SupportingDocuments?.Count ?? 0)</strong> documents for this claim.</p>
                        <label class="form-label">Verification Notes (Optional):</label>
                        <textarea name="notes" class="form-control" rows="3"
                                  placeholder="Add verification notes for all documents..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Verify All Documents</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Quick Reject Modal -->
<div class="modal fade" id="quickRejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-times-circle text-danger me-2"></i>Reject Claim
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-action="QuickRejectFromReview">
                <div class="modal-body">
                    <input type="hidden" name="claimId" value="@Model.ClaimID">
                    <div class="mb-3">
                        <label class="form-label">Rejection Reason *:</label>
                        <textarea name="reason" class="form-control" rows="3" required
                                  placeholder="Explain why this claim is being rejected..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Reject Claim</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Document verification
            $('.verify-doc').click(function() {
                var docId = $(this).data('doc-id');
                var docName = $(this).data('doc-name');

                $('#verifyDocId').val(docId);
                $('#verifyDocName').text(docName);
                $('#verifyIsValid').val('true');

                $('#verifyDocModal').modal('show');
            });

            // Document revision request
            $('.revision-doc').click(function() {
                var docId = $(this).data('doc-id');
                var docName = $(this).data('doc-name');

                $('#revisionDocId').val(docId);
                $('#revisionDocName').text(docName);

                $('#revisionDocModal').modal('show');
            });

            // Checklist functionality
            function updateChecklistProgress() {
                var totalItems = $('.checklist-item').length;
                var completedItems = $('.checklist-item:checked').length;
                var progress = (completedItems / totalItems) * 100;

                $('#checklistProgress').css('width', progress + '%');
                $('#checklistStatus').text(completedItems + ' of ' + totalItems + ' items completed');

                // Enable/disable approve button based on checklist completion
                var approveButton = $('button[type="submit"]').filter(function() {
                    return $(this).text().includes('Approve');
                });

                if (completedItems === totalItems) {
                    approveButton.removeClass('btn-secondary').addClass('btn-success');
                } else {
                    approveButton.removeClass('btn-success').addClass('btn-secondary');
                }
            }

            $('.checklist-item').change(updateChecklistProgress);
            updateChecklistProgress(); // Initialize progress

            // Auto-dismiss alerts after 5 seconds
            setTimeout(function() {
                $('.alert').alert('close');
            }, 5000);

            // Form validation
            $('form').on('submit', function() {
                var submitButton = $(this).find('button[type="submit"]');
                submitButton.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-1"></i>Processing...');
            });
        });
    </script>
}

<style>
    .coordinator-card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
        margin-bottom: 1.5rem;
    }

        .coordinator-card .card-header {
            background: #fff;
            border-bottom: 1px solid #e3e6f0;
            font-weight: 600;
            padding: 1rem 1.35rem;
        }

        .coordinator-card .card-body {
            padding: 1.35rem;
        }

    .timeline {
        position: relative;
        padding-left: 30px;
    }

    .timeline-item {
        position: relative;
        padding-bottom: 20px;
    }

        .timeline-item:not(:last-child):before {
            content: '';
            position: absolute;
            left: -20px;
            top: 0;
            bottom: -20px;
            width: 2px;
            background-color: #e9ecef;
        }

    .timeline-marker {
        position: absolute;
        left: -30px;
        top: 5px;
        width: 12px;
        height: 12px;
        border-radius: 50%;
    }

    .timeline-content {
