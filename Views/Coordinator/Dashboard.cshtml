@model List<Claim>
@{
    ViewData["Title"] = "Coordinator Dashboard";
}

<!-- Display Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Welcome Section -->
<div class="row mb-4">
    <div class="col-12">
        <div class="welcome-section bg-gradient-primary text-white p-4 rounded coordinator-card">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h2 class="mb-2">Welcome, @(ViewBag.UserName ?? User.Identity?.Name)!</h2>
                    <p class="lead mb-0">@(ViewBag.UserRole ?? "Coordinator") Dashboard - Contract Monthly Claim System</p>
                </div>
                <div class="col-md-4 text-md-end">
                    <div class="current-date bg-white text-dark rounded p-2 d-inline-block">
                        <i class="fas fa-calendar-alt me-2 text-primary"></i>
                        <strong>@DateTime.Now.ToString("dddd, MMMM dd, yyyy")</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Stats Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card coordinator-card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Pending Claims
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="pendingCount">@(ViewBag.PendingClaimsCount ?? 0)</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-clock fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card coordinator-card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Approved This Month
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="approvedCount">@(ViewBag.ApprovedThisMonth ?? 0)</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card coordinator-card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Documents to Verify
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="documentsCount">@(ViewBag.DocumentsToVerify ?? 0)</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-file-check fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card coordinator-card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Total Claims
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalCount">@(ViewBag.TotalClaimsCount ?? 0)</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-list-alt fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card coordinator-card">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-bolt me-2 text-warning"></i>Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <a href="@Url.Action("ReviewClaims")" class="btn btn-primary w-100 quick-action-btn" data-action="review">
                            <i class="fas fa-clipboard-check me-2"></i>Review Claims
                            @if ((ViewBag.PendingClaimsCount ?? 0) > 0)
                            {
                                <span class="badge bg-warning float-end mt-1">@(ViewBag.PendingClaimsCount ?? 0)</span>
                            }
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="@Url.Action("VerifyDocuments")" class="btn btn-info w-100 quick-action-btn" data-action="verify">
                            <i class="fas fa-file-check me-2"></i>Verify Documents
                            @if ((ViewBag.DocumentsToVerify ?? 0) > 0)
                            {
                                <span class="badge bg-warning float-end mt-1">@(ViewBag.DocumentsToVerify ?? 0)</span>
                            }
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="@Url.Action("GenerateReports")" class="btn btn-success w-100 quick-action-btn" data-action="reports">
                            <i class="fas fa-chart-bar me-2"></i>Generate Reports
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="@Url.Action("ReviewClaims", new { status = "Revision Requested" })" class="btn btn-warning w-100 quick-action-btn" data-action="revisions">
                            <i class="fas fa-edit me-2"></i>Review Revisions
                            @if ((ViewBag.RevisionRequestedCount ?? 0) > 0)
                            {
                                <span class="badge bg-danger float-end mt-1">@(ViewBag.RevisionRequestedCount ?? 0)</span>
                            }
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Pending Claims for Review -->
<div class="row">
    <div class="col-12">
        <div class="card coordinator-card">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="fas fa-clock me-2 text-warning"></i>Pending Claims for Review
                    <span class="badge bg-warning ms-2" id="pendingClaimsBadge">@(Model?.Count ?? 0) claims</span>
                </h5>
                <div>
                    <button class="btn btn-sm btn-outline-secondary me-2" id="refreshBtn" title="Refresh Data">
                        <i class="fas fa-sync-alt"></i>
                    </button>
                    <a href="@Url.Action("ReviewClaims")" class="btn btn-sm btn-primary">
                        <i class="fas fa-list me-1"></i>View All
                    </a>
                </div>
            </div>
            <div class="card-body">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover" id="pendingClaimsTable">
                            <thead class="table-light">
                                <tr>
                                    <th>Claim ID</th>
                                    <th>Lecturer</th>
                                    <th>Department</th>
                                    <th>Hours</th>
                                    <th>Amount</th>
                                    <th>Submitted</th>
                                    <th>Documents</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var claim in Model.Take(5))
                                {
                                    <tr class="claim-row" data-claim-id="@claim.ClaimID">
                                        <td><strong>#@claim.ClaimID</strong></td>
                                        <td>@(claim.Lecturer?.Name ?? "N/A")</td>
                                        <td>@(claim.Lecturer?.Department ?? "N/A")</td>
                                        <td>@claim.HoursWorked</td>
                                        <td>@claim.Amount.ToString("C")</td>
                                        <td>@claim.SubmissionDate.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            @if (claim.SupportingDocuments?.Any() == true)
                                            {
                                                <span class="badge bg-success">@claim.SupportingDocuments.Count</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">None</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="@Url.Action("ReviewClaim", new { id = claim.ClaimID })"
                                                   class="btn btn-sm btn-outline-primary" title="Review Claim">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="@Url.Action("VerifyDocuments", new { claimId = claim.ClaimID })"
                                                   class="btn btn-sm btn-outline-info" title="View Documents">
                                                    <i class="fas fa-file"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    @if (Model.Count > 5)
                    {
                        <div class="text-center mt-3">
                            <a href="@Url.Action("ReviewClaims")" class="btn btn-outline-primary">
                                <i class="fas fa-arrow-right me-1"></i>View All @Model.Count Pending Claims
                            </a>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                        <h5 class="text-success">No Pending Claims!</h5>
                        <p class="text-muted">There are currently no claims waiting for your review.</p>
                        <a href="@Url.Action("ReviewClaims")" class="btn btn-primary">
                            <i class="fas fa-list me-1"></i>View All Claims
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-dismiss alerts after 5 seconds
            setTimeout(function() {
                $('.alert').alert('close');
            }, 5000);

            // Refresh button functionality
            $('#refreshBtn').click(function() {
                refreshDashboard();
            });

            // Quick action buttons animation
            $('.quick-action-btn').hover(
                function() {
                    $(this).addClass('shadow');
                },
                function() {
                    $(this).removeClass('shadow');
                }
            );

            // Auto-refresh dashboard every 2 minutes
            setInterval(function() {
                refreshDashboardStats();
            }, 120000);

            // Initialize tooltips
            $('[title]').tooltip();
        });

        function refreshDashboard() {
            const $refreshBtn = $('#refreshBtn');
            $refreshBtn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i>');

            $.ajax({
                url: '@Url.Action("GetStatistics", "Coordinator")',
                type: 'GET',
                success: function(response) {
                    if (response.success) {
                        updateDashboardStats(response.data);
                        showNotification('Dashboard refreshed successfully!', 'success');
                    } else {
                        showNotification('Error refreshing dashboard: ' + response.message, 'error');
                    }
                },
                error: function(xhr, status, error) {
                    showNotification('Error refreshing dashboard: ' + error, 'error');
                },
                complete: function() {
                    $refreshBtn.prop('disabled', false).html('<i class="fas fa-sync-alt"></i>');
                }
            });
        }

        function refreshDashboardStats() {
            $.ajax({
                url: '@Url.Action("GetStatistics", "Coordinator")',
                type: 'GET',
                success: function(response) {
                    if (response.success) {
                        updateDashboardStats(response.data);
                    }
                }
            });
        }

        function updateDashboardStats(data) {
            $('#pendingCount').text(data.PendingClaims);
            $('#approvedCount').text(data.ApprovedClaims);
            $('#documentsCount').text(data.PendingClaims); // Approximate documents count
            $('#totalCount').text(data.TotalClaims);
            $('#pendingClaimsBadge').text(data.PendingClaims + ' claims');
        }

        function showNotification(message, type) {
            const alertClass = type === 'success' ? 'alert-success' : 'alert-danger';
            const icon = type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle';

            const notification = $(`
                <div class="alert ${alertClass} alert-dismissible fade show" role="alert">
                    <i class="fas ${icon} me-2"></i>${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `);

            $('.container-fluid').prepend(notification);

            setTimeout(function() {
                notification.alert('close');
            }, 3000);
        }
    </script>
}

