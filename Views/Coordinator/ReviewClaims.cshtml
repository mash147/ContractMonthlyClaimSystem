@model List<Claim>
@{
    ViewData["Title"] = "Review Claims";
}

<!-- Page Header -->
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Review Claims</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button type="button" class="btn btn-sm btn-outline-secondary" onclick="window.print()">
                <i class="fas fa-print me-1"></i>Print
            </button>
        </div>
    </div>
</div>

<!-- Status Filter -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card coordinator-card">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-4">
                        <h5 class="card-title mb-0">Filter by Status</h5>
                    </div>
                    <div class="col-md-8">
                        <div class="btn-group w-100" role="group">
                            @foreach (var status in ViewBag.StatusList)
                            {
                                <a href="@Url.Action("ReviewClaims", new { status = status })"
                                   class="btn @(ViewBag.CurrentStatus == status ? "btn-primary" : "btn-outline-primary")">
                                    @status
                                    @{
                                        var count = Model.Count(c => c.Status == status);
                                        if (count > 0)
                                        {
                                            <span class="badge bg-light text-dark ms-1">@count</span>
                                        }
                                    }
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Claims List -->
<div class="row">
    <div class="col-12">
        <div class="card coordinator-card">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="fas fa-list me-2"></i>@ViewBag.CurrentStatus Claims
                    <span class="badge bg-primary ms-2">@Model.Count</span>
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Claim ID</th>
                                    <th>Lecturer</th>
                                    <th>Department</th>
                                    <th>Hours</th>
                                    <th>Amount</th>
                                    <th>Submitted</th>
                                    <th>Documents</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var claim in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong>#@claim.ClaimID</strong>
                                        </td>
                                        <td>@claim.Lecturer?.Name</td>
                                        <td>@claim.Lecturer?.Department</td>
                                        <td>@claim.HoursWorked</td>
                                        <td>@claim.Amount.ToString("C")</td>
                                        <td>@claim.SubmissionDate.ToString("dd MMM yyyy")</td>
                                        <td>
                                            @if (claim.SupportingDocuments?.Any() == true)
                                            {
                                                <span class="badge bg-success" data-bs-toggle="tooltip" title="@claim.SupportingDocuments.Count documents">
                                                    @claim.SupportingDocuments.Count
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">None</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="status-badge badge @GetStatusBadgeClass(claim.Status)">
                                                @claim.Status
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="@Url.Action("ReviewClaim", new { id = claim.ClaimID })"
                                                   class="btn btn-sm btn-outline-primary" data-bs-toggle="tooltip" title="Review Claim Details">
                                                    <i class="fas fa-eye"></i> Review
                                                </a>
                                                <a href="@Url.Action("VerifyDocuments", new { claimId = claim.ClaimID })"
                                                   class="btn btn-sm btn-outline-info" data-bs-toggle="tooltip" title="Verify Documents">
                                                    <i class="fas fa-file-check"></i> Docs
                                                </a>
                                                @if (claim.Status == "Pending" || claim.Status == "Revision Requested")
                                                {
                                                    <form method="post" asp-action="SetUnderReview" class="d-inline">
                                                        <input type="hidden" name="claimId" value="@claim.ClaimID" />
                                                        <button type="submit" class="btn btn-sm btn-outline-warning" data-bs-toggle="tooltip" title="Mark as Under Review">
                                                            <i class="fas fa-search"></i> Review
                                                        </button>
                                                    </form>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                        <h5 class="text-success">No @ViewBag.CurrentStatus Claims!</h5>
                        <p class="text-muted">There are no @ViewBag.CurrentStatus.ToLower() claims at the moment.</p>
                        <a href="@Url.Action("ReviewClaims", new { status = "Pending" })" class="btn btn-primary">
                            <i class="fas fa-list me-1"></i>View Pending Claims
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}

<style>
    .coordinator-card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
        margin-bottom: 1.5rem;
    }

        .coordinator-card .card-header {
            background: #fff;
            border-bottom: 1px solid #e3e6f0;
            font-weight: 600;
            padding: 1rem 1.35rem;
        }

        .coordinator-card .card-body {
            padding: 1.35rem;
        }

    .table th {
        border-top: none;
        font-weight: 600;
        color: #6e707e;
        background-color: #f8f9fc;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fc;
    }
</style>

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "bg-warning",
            "Under Review" => "bg-info",
            "Coordinator Approved" => "bg-success",
            "Rejected" => "bg-danger",
            "Revision Requested" => "bg-secondary",
            _ => "bg-secondary"
        };
    }
}