
@{
    ViewData["Title"] = "HR Dashboard";
    Layout = "_HRLayout";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 border-bottom">
    <h1 class="h2">HR Dashboard</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a href="@Url.Action("ProcessPayments")" class="btn btn-sm btn-success">
                <i class="fas fa-money-bill-wave me-1"></i>Process Payments
            </a>
            <a href="@Url.Action("GenerateInvoices")" class="btn btn-sm btn-primary">
                <i class="fas fa-file-invoice me-1"></i>Generate Invoices
            </a>
        </div>
    </div>
</div>

<!-- Welcome Section -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card hr-card bg-light">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <h3 class="card-title">Welcome, @ViewBag.UserName!</h3>
                        <p class="card-text text-muted">
                            Manage lecturer data, process payments, and generate automated reports efficiently.
                        </p>
                        <div class="mt-3">
                            <span class="badge bg-primary me-2"><i class="fas fa-users me-1"></i>@ViewBag.TotalLecturers Total Lecturers</span>
                            <span class="badge bg-success me-2"><i class="fas fa-check-circle me-1"></i>@ViewBag.ActiveLecturers Active</span>
                            <span class="badge bg-warning"><i class="fas fa-clock me-1"></i>@ViewBag.PendingPayments Pending Payments</span>
                        </div>
                    </div>
                    <div class="col-md-4 text-center">
                        <i class="fas fa-user-tie fa-5x text-primary opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card hr-card border-start border-primary border-4">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs fw-bold text-primary text-uppercase mb-1">Total Lecturers</div>
                        <div class="h5 mb-0 fw-bold text-gray-800">@ViewBag.TotalLecturers</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-users fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card hr-card border-start border-success border-4">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs fw-bold text-success text-uppercase mb-1">Active Lecturers</div>
                        <div class="h5 mb-0 fw-bold text-gray-800">@ViewBag.ActiveLecturers</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-user-check fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card hr-card border-start border-warning border-4">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs fw-bold text-warning text-uppercase mb-1">Pending Payments</div>
                        <div class="h5 mb-0 fw-bold text-gray-800">@ViewBag.PendingPayments</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-clock fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card hr-card border-start border-info border-4">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs fw-bold text-info text-uppercase mb-1">Monthly Payments</div>
                        <div class="h5 mb-0 fw-bold text-gray-800">@ViewBag.TotalPaymentsThisMonth.ToString("C")</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card hr-card">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0"><i class="fas fa-bolt me-2"></i>Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <a href="@Url.Action("ManageLecturers")" class="btn btn-primary w-100 h-100 py-3">
                            <i class="fas fa-users fa-2x mb-2"></i><br>
                            Manage Lecturers
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="@Url.Action("ProcessPayments")" class="btn btn-success w-100 h-100 py-3">
                            <i class="fas fa-money-bill-wave fa-2x mb-2"></i><br>
                            Process Payments
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="@Url.Action("GenerateInvoices")" class="btn btn-info w-100 h-100 py-3">
                            <i class="fas fa-file-invoice fa-2x mb-2"></i><br>
                            Generate Invoices
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="@Url.Action("Analytics")" class="btn btn-warning w-100 h-100 py-3">
                            <i class="fas fa-chart-bar fa-2x mb-2"></i><br>
                            View Analytics
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activity -->
<div class="row">
    <div class="col-md-6">
        <div class="card hr-card">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0"><i class="fas fa-clock me-2"></i>Recent Payment Batches</h5>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1">BATCH-20241201-ABC123</h6>
                            <small class="text-muted">Generated: 01 Dec 2024</small>
                        </div>
                        <span class="badge bg-success">25 claims</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1">BATCH-20241115-DEF456</h6>
                            <small class="text-muted">Generated: 15 Nov 2024</small>
                        </div>
                        <span class="badge bg-success">18 claims</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card hr-card">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0"><i class="fas fa-bell me-2"></i>Notifications</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>5 lecturers</strong> have pending document verification
                </div>
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    Monthly payment processing due in <strong>3 days</strong>
                </div>
                <div class="alert alert-success">
                    <i class="fas fa-check-circle me-2"></i>
                    Last payment batch processed successfully
                </div>
            </div>
        </div>
    </div>
</div>
[file content end]