<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCS Manager Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <style>
        .manager-sidebar {
            background: linear-gradient(180deg, #8e44ad 0%, #9b59b6 100%);
            min-height: calc(100vh - 56px);
        }

        .manager-card {
            border-left: 4px solid #e67e22;
            transition: transform 0.2s;
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }

        .manager-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }

        .navbar-manager {
            background: linear-gradient(90deg, #e67e22 0%, #d35400 100%);
        }

        .manager-sidebar .nav-link {
            color: #ecf0f1;
            padding: 0.75rem 1rem;
            border-radius: 0.375rem;
            margin: 0.125rem 0.5rem;
            transition: all 0.3s ease;
        }

        .manager-sidebar .nav-link:hover,
        .manager-sidebar .nav-link.active {
            background-color: #e67e22;
            color: white;
            transform: translateX(5px);
        }

        .avatar-sm {
            width: 32px;
            height: 32px;
        }

        .trend-up {
            color: #27ae60;
        }

        .trend-down {
            color: #e74c3c;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3 navbar-manager">
            <div class="container">
                <a class="navbar-brand" asp-controller="Manager" asp-action="Dashboard">
                    <i class="fas fa-user-shield me-2"></i>CMCS - Manager Portal
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Additional navigation items if needed -->
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-cog me-1"></i>@ViewBag.UserName
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Profile</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>System Settings</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
                                        <button type="submit" class="dropdown-item">
                                            <i class="fas fa-sign-out-alt me-2"></i>Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block manager-sidebar collapse">
                <div class="position-sticky pt-3">
                    <div class="text-center mb-4">
                        <div class="bg-warning rounded-circle d-inline-flex align-items-center justify-content-center mb-2"
                             style="width: 60px; height: 60px;">
                            <i class="fas fa-user-shield fa-2x text-white"></i>
                        </div>
                        <h6 class="text-white mb-1">@ViewBag.UserName</h6>
                        <small class="text-light">Academic Manager</small>
                    </div>

                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "active" : "")"
                               asp-controller="Manager" asp-action="Dashboard">
                                <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "ApproveClaims" ? "active" : "")"
                               asp-controller="Manager" asp-action="ApproveClaims">
                                <i class="fas fa-check-double me-2"></i>Approve Claims
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "AuditTrail" ? "active" : "")"
                               asp-controller="Manager" asp-action="AuditTrail">
                                <i class="fas fa-history me-2"></i>Audit Trail
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Statistics" ? "active" : "")"
                               asp-controller="Manager" asp-action="Statistics">
                                <i class="fas fa-chart-pie me-2"></i>Statistics
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "ExportReports" ? "active" : "")"
                               asp-controller="Manager" asp-action="ExportReports">
                                <i class="fas fa-file-export me-2"></i>Export Reports
                            </a>
                        </li>
                    </ul>

                    <!-- Quick Stats -->
                    <div class="mt-4 p-3 bg-dark rounded">
                        <h6 class="sidebar-heading d-flex justify-content-between align-items-center text-white text-uppercase mb-2">
                            <span>Executive Summary</span>
                        </h6>
                        <div class="d-grid gap-1">
                            <small class="text-warning"><i class="fas fa-clock me-1"></i>Pending: @(ViewBag.PendingApprovalCount ?? 0)</small>
                            <small class="text-success"><i class="fas fa-dollar-sign me-1"></i>Total: @(ViewBag.TotalAmountThisMonth?.ToString("C") ?? "$0")</small>
                            <small class="text-info"><i class="fas fa-users me-1"></i>Lecturers: @(ViewBag.TotalLecturers ?? 0)</small>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container">
            &copy; 2024 - Contract Monthly Claim System - Manager Portal
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>