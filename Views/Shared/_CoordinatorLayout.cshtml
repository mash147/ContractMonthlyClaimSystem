<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Contract Monthly Claim System</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Navigation Wrapper -->
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar bg-primary">
            <div class="sidebar-header bg-dark">
                <a class="navbar-brand text-white" href="@Url.Action("Dashboard")">
                    <i class="fas fa-file-invoice-dollar me-2"></i>
                    <strong>Claim System</strong>
                </a>
                <button type="button" id="sidebarCollapse" class="btn btn-sm btn-dark">
                    <i class="fas fa-bars"></i>
                </button>
            </div>

            <ul class="list-unstyled components sidebar-menu">
                <li class="nav-item">
                    <a class="nav-link @IsActive("Dashboard")" href="@Url.Action("Dashboard")">
                        <i class="fas fa-tachometer-alt me-3"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @IsActive("ReviewClaims")" href="@Url.Action("ReviewClaims")">
                        <i class="fas fa-clipboard-check me-3"></i>
                        <span>Review Claims</span>
                        @if (ViewBag.PendingClaimsCount > 0)
                        {
                            <span class="badge bg-warning float-end">@ViewBag.PendingClaimsCount</span>
                        }
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @IsActive("VerifyDocuments")" href="@Url.Action("VerifyDocuments")">
                        <i class="fas fa-file-check me-3"></i>
                        <span>Verify Documents</span>
                        @if (ViewBag.DocumentsToVerify > 0)
                        {
                            <span class="badge bg-info float-end">@ViewBag.DocumentsToVerify</span>
                        }
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @IsActive("GenerateReports")" href="@Url.Action("GenerateReports")">
                        <i class="fas fa-chart-bar me-3"></i>
                        <span>Generate Reports</span>
                    </a>
                </li>
            </ul>

            <!-- User Section -->
            <div class="sidebar-footer bg-dark text-white p-3">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-user-circle fa-2x"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="mb-0">@User.Identity?.Name</h6>
                        <small class="text-muted">@(User.IsInRole("Manager") ? "Academic Manager" : "Programme Coordinator")</small>
                    </div>
                </div>
                <div class="mt-3">
                    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="d-grid">
                        <button type="submit" class="btn btn-outline-light btn-sm">
                            <i class="fas fa-sign-out-alt me-1"></i>Logout
                        </button>
                    </form>
                </div>
            </div>
        </nav>

        <!-- Page Content -->
        <div id="content" class="content">
            <!-- Top Navigation Bar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-primary">
                        <i class="fas fa-bars"></i>
                    </button>

                    <div class="navbar-nav ms-auto">
                        <span class="navbar-text me-3 d-none d-md-block">
                            <i class="fas fa-user me-1"></i>@User.Identity?.Name
                        </span>
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-cog"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Profile</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Settings</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
                                        <button type="submit" class="dropdown-item">
                                            <i class="fas fa-sign-out-alt me-2"></i>Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <div class="container-fluid p-4">
                <!-- Notifications -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @RenderBody()
            </div>

            <!-- Footer -->
            <footer class="bg-light border-top mt-auto py-3">
                <div class="container-fluid">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <p class="text-muted mb-0">&copy; 2024 Contract Monthly Claim System</p>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <span class="text-muted small">@(User.IsInRole("Manager") ? "Academic Manager" : "Programme Coordinator") Portal</span>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
                $('#content').toggleClass('active');
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@functions {
    public string IsActive(string actionName)
    {
        var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
        return currentAction == actionName ? "active" : "";
    }
}

<style>
    /* Sidebar Styles */
    .wrapper {
        display: flex;
        width: 100%;
        align-items: stretch;
    }

    #sidebar {
        min-width: 250px;
        max-width: 250px;
        min-height: 100vh;
        transition: all 0.3s;
        box-shadow: 2px 0 5px rgba(0,0,0,0.1);
    }

        #sidebar.active {
            margin-left: -250px;
        }

    #content {
        width: 100%;
        min-height: 100vh;
        transition: all 0.3s;
    }

        #content.active {
            width: 100%;
        }

    .sidebar-header {
        padding: 20px;
        background: #343a40;
    }

    .sidebar-menu {
        padding: 20px 0;
    }

        .sidebar-menu .nav-link {
            color: #fff;
            padding: 12px 20px;
            border-left: 4px solid transparent;
            transition: all 0.3s;
        }

            .sidebar-menu .nav-link:hover {
                background: rgba(255,255,255,0.1);
                border-left: 4px solid #ffc107;
                color: #fff;
            }

            .sidebar-menu .nav-link.active {
                background: rgba(255,255,255,0.15);
                border-left: 4px solid #ffc107;
                color: #ffc107;
                font-weight: 600;
            }

            .sidebar-menu .nav-link i {
                width: 20px;
                text-align: center;
            }

    .sidebar-footer {
        position: absolute;
        bottom: 0;
        width: 100%;
        border-top: 1px solid rgba(255,255,255,0.1);
    }

    /* Badge styles */
    .sidebar-menu .badge {
        font-size: 0.7em;
        margin-top: 2px;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        #sidebar {
            margin-left: -250px;
        }

            #sidebar.active {
                margin-left: 0;
            }

        #content {
            width: 100%;
        }

            #content.active {
                margin-left: 250px;
            }
    }

    /* Content area styling */
    .content {
        background-color: #f8f9fa;
    }

    /* Card styling to match dashboard */
    .coordinator-card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
        margin-bottom: 1.5rem;
    }

        .coordinator-card .card-header {
            background: #fff;
            border-bottom: 1px solid #e3e6f0;
            font-weight: 600;
            padding: 1rem 1.35rem;
        }

        .coordinator-card .card-body {
            padding: 1.35rem;
        }

    /* Button styles matching dashboard */
    .btn-primary {
        background-color: #4e73df;
        border-color: #4e73df;
    }

        .btn-primary:hover {
            background-color: #2e59d9;
            border-color: #2653d4;
        }

    .btn-success {
        background-color: #1cc88a;
        border-color: #1cc88a;
    }

    .btn-warning {
        background-color: #f6c23e;
        border-color: #f6c23e;
        color: #000;
    }

    .btn-info {
        background-color: #36b9cc;
        border-color: #36b9cc;
    }

    /* Progress bar styles */
    .progress {
        background-color: #eaecf4;
        border-radius: 0.35rem;
    }

    .progress-bar {
        background-color: #4e73df;
    }

    /* Table styles */
    .table th {
        border-top: none;
        font-weight: 600;
        color: #6e707e;
        background-color: #f8f9fc;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fc;
    }
</style>