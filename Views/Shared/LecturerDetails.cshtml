@model Lecturer
@{
    ViewData["Title"] = "Lecturer Details";
    Layout = "_HRLayout";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 border-bottom">
    <h1 class="h2">Lecturer Details</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a href="@Url.Action("ManageLecturers")" class="btn btn-sm btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i>Back to List
            </a>
            <a href="@Url.Action("EditLecturer", new { id = Model.LecturerID })" class="btn btn-sm btn-primary">
                <i class="fas fa-edit me-1"></i>Edit Lecturer
            </a>
        </div>
    </div>
</div>

<!-- Lecturer Information -->
<div class="row">
    <div class="col-lg-4">
        <div class="card hr-card mb-4">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-user me-2"></i>Personal Information
                </h5>
            </div>
            <div class="card-body text-center">
                <div class="avatar-lg bg-primary rounded-circle text-white d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 80px; height: 80px; font-size: 2rem;">
                    @Model.Name.Substring(0, 1).ToUpper()
                </div>
                <h4>@Model.Name</h4>
                <p class="text-muted">@Model.Department</p>

                <div class="text-start mt-4">
                    <div class="mb-2">
                        <strong><i class="fas fa-id-card me-2"></i>Employee ID:</strong>
                        <span class="float-end">@Model.User?.EmployeeId</span>
                    </div>
                    <div class="mb-2">
                        <strong><i class="fas fa-envelope me-2"></i>Email:</strong>
                        <span class="float-end">@Model.User?.Email</span>
                    </div>
                    <div class="mb-2">
                        <strong><i class="fas fa-phone me-2"></i>Phone:</strong>
                        <span class="float-end">@(Model.User?.PhoneNumber ?? "Not provided")</span>
                    </div>
                    <div class="mb-2">
                        <strong><i class="fas fa-money-bill-wave me-2"></i>Hourly Rate:</strong>
                        <span class="float-end">@Model.HourlyRate.ToString("C")</span>
                    </div>
                    <div class="mb-2">
                        <strong><i class="fas fa-circle me-2"></i>Status:</strong>
                        <span class="float-end">
                            @if (Model.User?.IsActive == true)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="card hr-card">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-chart-bar me-2"></i>Quick Stats
                </h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6 mb-3">
                        <div class="text-primary fw-bold h4">@Model.Claims?.Count</div>
                        <small class="text-muted">Total Claims</small>
                    </div>
                    <div class="col-6 mb-3">
                        <div class="text-success fw-bold h4">
                            @Model.Claims?.Count(c => c.Status == "Approved")
                        </div>
                        <small class="text-muted">Approved</small>
                    </div>
                    <div class="col-6">
                        <div class="text-warning fw-bold h4">
                            @Model.Claims?.Count(c => c.Status == "Pending")
                        </div>
                        <small class="text-muted">Pending</small>
                    </div>
                    <div class="col-6">
                        <div class="text-info fw-bold h4">
                            @Model.Claims?.Where(c => c.Status == "Approved").Sum(c => c.Amount).ToString("C")
                        </div>
                        <small class="text-muted">Total Paid</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <!-- Recent Claims -->
        <div class="card hr-card mb-4">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="fas fa-file-invoice me-2"></i>Recent Claims
                </h5>
                <a href="#" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body">
                @if (Model.Claims?.Any() == true)
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Claim ID</th>
                                    <th>Submission Date</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                    <th>Payment</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var claim in Model.Claims.OrderByDescending(c => c.SubmissionDate).Take(10))
                                {
                                    <tr>
                                        <td>#@claim.ClaimID</td>
                                        <td>@claim.SubmissionDate.ToString("dd MMM yyyy")</td>
                                        <td>@claim.Amount.ToString("C")</td>
                                        <td>
                                            @if (claim.Status == "Approved")
                                            {
                                                <span class="badge bg-success">Approved</span>
                                            }
                                            else if (claim.Status == "Pending")
                                            {
                                                <span class="badge bg-warning">Pending</span>
                                            }
                                            else if (claim.Status == "Rejected")
                                            {
                                                <span class="badge bg-danger">Rejected</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@claim.Status</span>
                                            }
                                        </td>
                                        <td>
                                            @if (claim.IsPaid)
                                            {
                                                <span class="badge bg-success">Paid</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Unpaid</span>
                                            }
                                        </td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-file-invoice fa-3x text-muted mb-3"></i>
                        <h5>No Claims Found</h5>
                        <p class="text-muted">This lecturer hasn't submitted any claims yet.</p>
                    </div>
                }
            </div>
        </div>

        <!-- Audit Trail -->
        <div class="card hr-card">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-history me-2"></i>Recent Activity
                </h5>
            </div>
            <div class="card-body">
                @{
                    var auditTrails = Model.Claims?
                    .SelectMany(c => c.AuditTrails ?? new List<AuditTrail>())
                    .Where(a => a != null)
                    .OrderByDescending(a => a.ActionDate)
                    .Take(5)
                    .ToList();
                }

                @if (auditTrails?.Any() == true)
                {
                    <div class="timeline">
                        @foreach (var audit in auditTrails)
                        {
                            <div class="timeline-item mb-3">
                                <div class="timeline-marker bg-primary"></div>
                                <div class="timeline-content">
                                    <div class="d-flex justify-content-between">
                                        <strong>@audit.Action</strong>
                                        <small class="text-muted">@audit.ActionDate.ToString("dd MMM yyyy HH:mm")</small>
                                    </div>
                                    <p class="mb-1">@audit.Description</p>
                                    <small class="text-muted">By: @audit.ActionBy</small>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-3">
                        <i class="fas fa-history fa-2x text-muted mb-2"></i>
                        <p class="text-muted">No recent activity found.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Action Buttons -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card hr-card">
            <div class="card-body">
                <div class="btn-group">
                    <a href="@Url.Action("EditLecturer", new { id = Model.LecturerID })" class="btn btn-primary">
                        <i class="fas fa-edit me-1"></i>Edit Information
                    </a>
                    @if (Model.User?.IsActive == true)
                    {
                        <button type="button" class="btn btn-warning">
                            <i class="fas fa-pause me-1"></i>Deactivate
                        </button>
                    }
                    else
                    {
                        <button type="button" class="btn btn-success">
                            <i class="fas fa-play me-1"></i>Activate
                        </button>
                    }
                    <button type="button" class="btn btn-info">
                        <i class="fas fa-envelope me-1"></i>Send Email
                    </button>
                    <button type="button" class="btn btn-outline-danger">
                        <i class="fas fa-trash me-1"></i>Delete
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .timeline {
        position: relative;
        padding-left: 2rem;
    }

    .timeline-item {
        position: relative;
        padding-bottom: 1rem;
    }

    .timeline-marker {
        position: absolute;
        left: -2rem;
        top: 0.5rem;
        width: 12px;
        height: 12px;
        border-radius: 50%;
    }

    .timeline-content {
        background: #f8f9fa;
        padding: 1rem;
        border-radius: 0.375rem;
        border-left: 3px solid #007bff;
    }

    .avatar-lg {
        font-weight: bold;
    }
</style>