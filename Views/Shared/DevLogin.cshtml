[file name]: DevLogin.cshtml
[file content begin]
@{
    ViewData["Title"] = "Development Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Development Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
        }
        .login-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        }
        .role-btn {
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }
        .role-btn:hover {
            transform: translateY(-2px);
            border-color: #007bff;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="login-card p-5">
                    <div class="text-center mb-4">
                        <h1 class="h3 font-weight-normal">Development Login</h1>
                        <p class="text-muted">Select a role to access the system</p>
                    </div>

                    <form method="post">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <button type="submit" name="role" value="Lecturer" 
                                        class="btn btn-outline-primary w-100 h-100 py-3 role-btn">
                                    <i class="fas fa-chalkboard-teacher fa-2x mb-2"></i><br>
                                    <strong>Lecturer</strong><br>
                                    <small class="text-muted">Submit & track claims</small>
                                </button>
                            </div>
                            <div class="col-md-6">
                                <button type="submit" name="role" value="Coordinator" 
                                        class="btn btn-outline-success w-100 h-100 py-3 role-btn">
                                    <i class="fas fa-tasks fa-2x mb-2"></i><br>
                                    <strong>Coordinator</strong><br>
                                    <small class="text-muted">Review & verify claims</small>
                                </button>
                            </div>
                            <div class="col-md-6">
                                <button type="submit" name="role" value="Manager" 
                                        class="btn btn-outline-warning w-100 h-100 py-3 role-btn">
                                    <i class="fas fa-user-tie fa-2x mb-2"></i><br>
                                    <strong>Manager</strong><br>
                                    <small class="text-muted">Final approval & analytics</small>
                                </button>
                            </div>
                            <div class="col-md-6">
                                <button type="submit" name="role" value="HR" 
                                        class="btn btn-outline-info w-100 h-100 py-3 role-btn">
                                    <i class="fas fa-users fa-2x mb-2"></i><br>
                                    <strong>HR</strong><br>
                                    <small class="text-muted">Payments & reporting</small>
                                </button>
                            </div>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <small class="text-muted">
                            <i class="fas fa-info-circle me-1"></i>
                            This is for development purposes only
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
</body>
</html>
[file content end]