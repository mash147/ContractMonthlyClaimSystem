@model ContractMonthlyClaimSystem.Models.ViewModels.HRAnalyticsViewModel
@{
    ViewData["Title"] = "HR Analytics";
    Layout = "_HRLayout";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 border-bottom">
    <h1 class="h2">HR Analytics</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
        </div>
    </div>
</div>

<!-- Key Metrics -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card hr-card border-start border-primary border-4">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs fw-bold text-primary text-uppercase mb-1">Total Lecturers</div>
                        <div class="h5 mb-0 fw-bold text-gray-800">@Model.TotalLecturers</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-users fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card hr-card border-start border-success border-4">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs fw-bold text-success text-uppercase mb-1">Active Lecturers</div>
                        <div class="h5 mb-0 fw-bold text-gray-800">@Model.ActiveLecturers</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-user-check fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card hr-card border-start border-info border-4">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs fw-bold text-info text-uppercase mb-1">Claims Processed</div>
                        <div class="h5 mb-0 fw-bold text-gray-800">@Model.TotalClaimsProcessed</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-file-invoice fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card hr-card border-start border-warning border-4">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs fw-bold text-warning text-uppercase mb-1">Total Payments</div>
                        <div class="h5 mb-0 fw-bold text-gray-800">@Model.TotalPayments.ToString("C")</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Department Statistics & Monthly Trends -->
<div class="row">
    <div class="col-lg-6 mb-4">
        <div class="card hr-card">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-building me-2"></i>Department Statistics
                </h5>
            </div>
            <div class="card-body">
                @if (Model.DepartmentStats != null && Model.DepartmentStats.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Department</th>
                                    <th>Total Claims</th>
                                    <th>Approved</th>
                                    <th>Total Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var stat in Model.DepartmentStats)
                                {
                                    <tr>
                                        <td><strong>@stat.Department</strong></td>
                                        <td>@stat.TotalClaims</td>
                                        <td>@stat.ApprovedClaims</td>
                                        <td>@stat.TotalAmount.ToString("C")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center text-muted py-3">
                        <p>No department statistics available</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-6 mb-4">
        <div class="card hr-card">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-chart-line me-2"></i>Monthly Trends
                </h5>
            </div>
            <div class="card-body">
                @if (Model.MonthlyTrends != null && Model.MonthlyTrends.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Month</th>
                                    <th>Submitted</th>
                                    <th>Approved</th>
                                    <th>Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var trend in Model.MonthlyTrends)
                                {
                                    <tr>
                                        <td>@trend.Month</td>
                                        <td>@trend.SubmittedClaims</td>
                                        <td>@trend.ApprovedClaims</td>
                                        <td>@trend.TotalAmount.ToString("C")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center text-muted py-3">
                        <p>No monthly trends available</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Charts Placeholder -->
<div class="row">
    <div class="col-lg-8">
        <div class="card hr-card">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-chart-bar me-2"></i>Claims Overview
                </h5>
            </div>
            <div class="card-body">
                <div class="chart-container" style="position: relative; height: 300px;">
                    <div class="text-center text-muted py-5">
                        <i class="fas fa-chart-bar fa-3x mb-3"></i>
                        <p>Claims overview chart would be displayed here</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card hr-card">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-chart-pie me-2"></i>Department Distribution
                </h5>
            </div>
            <div class="card-body">
                <div class="chart-container" style="position: relative; height: 300px;">
                    <div class="text-center text-muted py-5">
                        <i class="fas fa-chart-pie fa-3x mb-3"></i>
                        <p>Department distribution chart would be displayed here</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>