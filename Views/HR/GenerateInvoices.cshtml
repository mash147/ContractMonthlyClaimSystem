@model ContractMonthlyClaimSystem.Models.ViewModels.InvoiceReportViewModel
@{
    ViewData["Title"] = "Generate Invoices";
    Layout = "_HRLayout";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 border-bottom">
    <h1 class="h2">Generate Invoices</h1>
</div>

<!-- Report Configuration -->
<div class="card hr-card mb-4">
    <div class="card-header bg-white">
        <h5 class="card-title mb-0">
            <i class="fas fa-cog me-2"></i>Report Configuration
        </h5>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Report Type</label>
                <select name="reportType" class="form-select">
                    <option value="Monthly" selected="@(Model.ReportType == "Monthly")">Monthly</option>
                    <option value="Weekly" selected="@(Model.ReportType == "Weekly")">Weekly</option>
                    <option value="Quarterly" selected="@(Model.ReportType == "Quarterly")">Quarterly</option>
                    <option value="Custom" selected="@(Model.ReportType == "Custom")">Custom</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Start Date</label>
                <input type="date" name="startDate" class="form-control" value="@Model.StartDate.ToString("yyyy-MM-dd")">
            </div>
            <div class="col-md-3">
                <label class="form-label">End Date</label>
                <input type="date" name="endDate" class="form-control" value="@Model.EndDate.ToString("yyyy-MM-dd")">
            </div>
            <div class="col-md-3">
                <label class="form-label">&nbsp;</label>
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-filter me-1"></i>Apply Filters
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Report Summary -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card hr-card border-start border-primary border-4">
            <div class="card-body">
                <div class="text-xs fw-bold text-primary text-uppercase mb-1">Total Claims</div>
                <div class="h5 mb-0 fw-bold text-gray-800">@Model.TotalClaims</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card hr-card border-start border-success border-4">
            <div class="card-body">
                <div class="text-xs fw-bold text-success text-uppercase mb-1">Total Amount</div>
                <div class="h5 mb-0 fw-bold text-gray-800">@Model.TotalAmount.ToString("C")</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card hr-card border-start border-info border-4">
            <div class="card-body">
                <div class="text-xs fw-bold text-info text-uppercase mb-1">Date Range</div>
                <div class="h6 mb-0 fw-bold text-gray-800">
                    @Model.StartDate.ToString("dd MMM yyyy") - @Model.EndDate.ToString("dd MMM yyyy")
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Export Options -->
<div class="card hr-card mb-4">
    <div class="card-header bg-white">
        <h5 class="card-title mb-0">
            <i class="fas fa-download me-2"></i>Export Options
        </h5>
    </div>
    <div class="card-body">
        <form method="post" asp-action="DownloadInvoiceReport" class="row g-3 align-items-end">
            <input type="hidden" name="ReportType" value="@Model.ReportType" />
            <input type="hidden" name="StartDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" />
            <input type="hidden" name="EndDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" />

            <div class="col-md-6">
                <label class="form-label">Export Format</label>
                <select name="format" class="form-select">
                    <option value="PDF">PDF Document</option>
                    <option value="Excel">Excel Spreadsheet</option>
                </select>
            </div>
            <div class="col-md-6">
                <button type="submit" class="btn btn-success w-100">
                    <i class="fas fa-file-export me-1"></i>Generate Report
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Claims Preview -->
<div class="card hr-card">
    <div class="card-header bg-white">
        <h5 class="card-title mb-0">
            <i class="fas fa-list me-2"></i>Claims Preview (@Model.Claims.Count)
        </h5>
    </div>
    <div class="card-body">
        @if (!Model.Claims.Any())
        {
            <div class="text-center py-5">
                <i class="fas fa-file-excel fa-3x text-muted mb-3"></i>
                <h4>No Claims Found</h4>
                <p class="text-muted">No approved claims found for the selected period.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Claim ID</th>
                            <th>Lecturer</th>
                            <th>Department</th>
                            <th>Submission Date</th>
                            <th>Amount</th>
                            <th>Payment Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model.Claims)
                        {
                            <tr>
                                <td>#@claim.ClaimID</td>
                                <td>
                                    <strong>@claim.Lecturer?.Name</strong>
                                    <br>
                                    <small class="text-muted">@claim.Lecturer?.User?.EmployeeId</small>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@claim.Lecturer?.Department</span>
                                </td>
                                <td>@claim.SubmissionDate.ToString("dd MMM yyyy")</td>
                                <td>
                                    <strong>@claim.Amount.ToString("C")</strong>
                                </td>
                                <td>
                                    @if (claim.IsPaid)
                                    {
                                        <span class="badge bg-success">Paid</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Pending</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>