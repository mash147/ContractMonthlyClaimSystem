@model List<ContractMonthlyClaimSystem.Models.Claim>
@{
    ViewData["Title"] = "Track Claim Status";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 border-bottom">
    <h1 class="h2">Track Claim Status</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="@Url.Action("Dashboard")" class="btn btn-sm btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
        </a>
    </div>
</div>

<!-- Display Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Status Summary Cards -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card dashboard-card border-start border-primary border-4">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h6 class="card-title text-primary">Total Claims</h6>
                        <h3 class="mb-0">@(Model?.Count ?? 0)</h3>
                        <small class="text-muted">All submissions</small>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="fas fa-file-invoice fa-2x text-primary"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card dashboard-card border-start border-warning border-4">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h6 class="card-title text-warning">Pending Review</h6>
                        <h3 class="mb-0">@(ViewBag.PendingClaims?.Count ?? 0)</h3>
                        <small class="text-muted">Awaiting review</small>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="fas fa-clock fa-2x text-warning"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card dashboard-card border-start border-success border-4">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h6 class="card-title text-success">Approved</h6>
                        <h3 class="mb-0">@(ViewBag.ApprovedClaims?.Count ?? 0)</h3>
                        <small class="text-muted">Successfully approved</small>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="fas fa-check-circle fa-2x text-success"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card dashboard-card border-start border-danger border-4">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h6 class="card-title text-danger">Rejected</h6>
                        <h3 class="mb-0">@(ViewBag.RejectedClaims?.Count ?? 0)</h3>
                        <small class="text-muted">Requires attention</small>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="fas fa-times-circle fa-2x text-danger"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Search and Filter Section -->
<div class="row mb-3">
    <div class="col-md-6">
        <div class="input-group">
            <span class="input-group-text"><i class="fas fa-search"></i></span>
            <input type="text" class="form-control" placeholder="Search claims..." id="searchInput">
        </div>
    </div>
    <div class="col-md-6">
        <div class="d-flex justify-content-end">
            <div class="btn-group">
                <button type="button" class="btn btn-sm btn-outline-primary active" data-filter="all">All</button>
                <button type="button" class="btn btn-sm btn-outline-warning" data-filter="pending">Pending</button>
                <button type="button" class="btn btn-sm btn-outline-info" data-filter="under review">Under Review</button>
                <button type="button" class="btn btn-sm btn-outline-success" data-filter="approved">Approved</button>
                <button type="button" class="btn btn-sm btn-outline-danger" data-filter="rejected">Rejected</button>
            </div>
        </div>
    </div>
</div>

<!-- All Claims Table -->
<div class="row">
    <div class="col-12">
        <div class="card dashboard-card">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0"><i class="fas fa-tasks me-2"></i>All Claims Status</h5>
                <div class="text-muted">
                    <small>Last updated: @DateTime.Now.ToString("dd MMM yyyy HH:mm")</small>
                </div>
            </div>
            <div class="card-body">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover" id="claimsTable">
                            <thead class="table-light">
                                <tr>
                                    <th>Claim ID</th>
                                    <th>Submission Date</th>
                                    <th>Hours Worked</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                    <th>Last Updated</th>
                                    <th>Documents</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var claim in Model)
                                {
                                    <tr class="claim-row" data-status="@claim.Status.ToLower()">
                                        <td>
                                            <strong>#@claim.ClaimID</strong>
                                        </td>
                                        <td>@claim.SubmissionDate.ToString("dd MMM yyyy")</td>
                                        <td>@claim.HoursWorked</td>
                                        <td>@claim.Amount.ToString("C")</td>
                                        <td>
                                            <span class="status-badge badge @GetStatusBadgeClass(claim.Status) @GetStatusTextClass(claim.Status)">
                                                @claim.Status
                                                @if (claim.Status == "Pending" || claim.Status == "Under Review")
                                                {
                                                    <i class="fas fa-clock ms-1"></i>
                                                }
                                                else if (claim.Status == "Approved" || claim.Status == "Coordinator Approved")
                                                {
                                                    <i class="fas fa-check ms-1"></i>
                                                }
                                                else if (claim.Status == "Rejected")
                                                {
                                                    <i class="fas fa-times ms-1"></i>
                                                }
                                            </span>
                                        </td>
                                        <td>
                                            @{
                                                var lastUpdate = claim.AuditTrails?
                                                .OrderByDescending(a => a.Timestamp)
                                                .FirstOrDefault()?.Timestamp ?? claim.SubmissionDate;
                                            }
                                            <small>@lastUpdate.ToString("dd MMM yyyy HH:mm")</small>
                                        </td>
                                        <td>
                                            @if (claim.SupportingDocuments?.Any() == true)
                                            {
                                                <span class="badge bg-success" data-bs-toggle="tooltip" title="@claim.SupportingDocuments.Count document(s)">
                                                    <i class="fas fa-file me-1"></i>@claim.SupportingDocuments.Count
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">No documents</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <button class="btn btn-outline-primary view-timeline"
                                                        data-claim-id="@claim.ClaimID"
                                                        data-bs-toggle="tooltip" title="View Timeline">
                                                    <i class="fas fa-history"></i>
                                                </button>
                                                <a href="@Url.Action("ClaimDetails", new { id = claim.ClaimID })"
                                                   class="btn btn-outline-info" data-bs-toggle="tooltip" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                @if (claim.Status == "Rejected")
                                                {
                                                    <button class="btn btn-outline-warning resubmit-claim"
                                                            data-claim-id="@claim.ClaimID"
                                                            data-bs-toggle="tooltip" title="Resubmit Claim">
                                                        <i class="fas fa-redo"></i>
                                                    </button>
                                                }
                                                @if (claim.Status == "Pending" || claim.Status == "Under Review")
                                                {
                                                    <a href="@Url.Action("UploadDocuments", new { claimId = claim.ClaimID })"
                                                       class="btn btn-outline-success" data-bs-toggle="tooltip" title="Add Documents">
                                                        <i class="fas fa-upload"></i>
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- No Results Message -->
                    <div id="noResults" class="text-center py-5 d-none">
                        <i class="fas fa-search fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No Claims Found</h4>
                        <p class="text-muted">Try adjusting your search or filter criteria.</p>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-file-invoice fa-4x text-muted mb-3"></i>
                        <h4 class="text-muted">No Claims Found</h4>
                        <p class="text-muted">You haven't submitted any claims yet.</p>
                        <a href="@Url.Action("SubmitClaim")" class="btn btn-primary">
                            <i class="fas fa-plus-circle me-1"></i>Submit Your First Claim
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Timeline Modal -->
<div class="modal fade" id="timelineModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Claim Timeline - #<span id="timelineClaimId"></span></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="timelineContent">
                    <div class="text-center py-4">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2">Loading timeline...</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Resubmit Confirmation Modal -->
<div class="modal fade" id="resubmitModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Resubmit Claim</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to resubmit claim #<span id="resubmitClaimId"></span>?</p>
                <p class="text-muted">This will create a new claim with the same details and reset the approval process.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-warning" id="confirmResubmit">Resubmit Claim</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            let currentResubmitClaimId = null;

            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Filter functionality
            $('[data-filter]').click(function() {
                var filter = $(this).data('filter');

                // Update active button
                $('[data-filter]').removeClass('active');
                $(this).addClass('active');

                filterClaims();
            });

            // Search functionality
            $('#searchInput').on('input', function() {
                filterClaims();
            });

            function filterClaims() {
                var filter = $('[data-filter].active').data('filter');
                var searchText = $('#searchInput').val().toLowerCase();
                var hasVisibleRows = false;

                $('.claim-row').each(function() {
                    var $row = $(this);
                    var status = $row.data('status');
                    var rowText = $row.text().toLowerCase();

                    var matchesFilter = filter === 'all' || status === filter;
                    var matchesSearch = searchText === '' || rowText.includes(searchText);

                    if (matchesFilter && matchesSearch) {
                        $row.show();
                        hasVisibleRows = true;
                    } else {
                        $row.hide();
                    }
                });

                // Show/hide no results message
                if (hasVisibleRows) {
                    $('#noResults').addClass('d-none');
                } else {
                    $('#noResults').removeClass('d-none');
                }
            }

            // Timeline modal
            $('.view-timeline').click(function() {
                var claimId = $(this).data('claim-id');
                $('#timelineClaimId').text(claimId);
                loadTimeline(claimId);
                $('#timelineModal').modal('show');
            });

            // Resubmit claim functionality
            $('.resubmit-claim').click(function() {
                currentResubmitClaimId = $(this).data('claim-id');
                $('#resubmitClaimId').text(currentResubmitClaimId);
                $('#resubmitModal').modal('show');
            });

            $('#confirmResubmit').click(function() {
                if (!currentResubmitClaimId) return;

                var $btn = $(this);
                $btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-1"></i>Resubmitting...');

                $.post('@Url.Action("ResubmitClaim", "Lecturer")', { claimId: currentResubmitClaimId })
                    .done(function(response) {
                        if (response.success) {
                            $('#resubmitModal').modal('hide');
                            showAlert('success', response.message);
                            // Reload page after a short delay to show the new claim
                            setTimeout(function() {
                                window.location.reload();
                            }, 2000);
                        } else {
                            showAlert('danger', response.message);
                            $btn.prop('disabled', false).html('Resubmit Claim');
                        }
                    })
                    .fail(function() {
                        showAlert('danger', 'Error resubmitting claim. Please try again.');
                        $btn.prop('disabled', false).html('Resubmit Claim');
                    });
            });

            function loadTimeline(claimId) {
                $('#timelineContent').html(`
                    <div class="text-center py-4">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2">Loading timeline...</p>
                    </div>
                `);

                $.get('@Url.Action("GetClaimTimeline", "Lecturer")', { claimId: claimId })
                    .done(function(response) {
                        if (response.success) {
                            displayTimeline(response.timeline);
                        } else {
                            $('#timelineContent').html(`
                                <div class="alert alert-danger">
                                    <i class="fas fa-exclamation-circle me-2"></i>${response.message}
                                </div>
                            `);
                        }
                    })
                    .fail(function() {
                        $('#timelineContent').html(`
                            <div class="alert alert-danger">
                                <i class="fas fa-exclamation-circle me-2"></i>Error loading timeline. Please try again.
                            </div>
                        `);
                    });
            }

            function displayTimeline(timeline) {
                if (!timeline || timeline.length === 0) {
                    $('#timelineContent').html(`
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>No timeline data available for this claim.
                        </div>
                    `);
                    return;
                }

                var html = '<div class="timeline">';
                timeline.forEach(function(item, index) {
                    var isLast = index === timeline.length - 1;
                    var isCurrent = item.action.includes('Status:');

                    html += `
                        <div class="timeline-item ${isLast ? 'current' : ''} ${isCurrent ? 'current-status' : ''}">
                            <div class="timeline-marker">
                                <i class="${item.icon}"></i>
                            </div>
                            <div class="timeline-content">
                                <div class="timeline-header">
                                    <strong>${item.action}</strong>
                                    <span class="timeline-date">${item.date}</span>
                                </div>
                                <div class="timeline-body">
                                    <small class="text-muted">By: ${item.user}</small>
                                </div>
                            </div>
                        </div>
                    `;
                });
                html += '</div>';
                $('#timelineContent').html(html);
            }

            function showAlert(type, message) {
                var alertClass = type === 'success' ? 'alert-success' : 'alert-danger';
                var icon = type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle';

                var alertHtml = `
                    <div class="alert ${alertClass} alert-dismissible fade show" role="alert">
                        <i class="fas ${icon} me-2"></i>${message}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                `;

                // Remove existing alerts and add new one
                $('.alert-dismissible').alert('close');
                setTimeout(function() {
                    $('.border-bottom').after(alertHtml);
                }, 100);
            }

            // Auto-dismiss alerts after 5 seconds
            setTimeout(function() {
                $('.alert').alert('close');
            }, 5000);

            // Auto-refresh page every 2 minutes to get latest status
            setInterval(function() {
                console.log('Auto-refreshing claim status...');
                // You can implement partial refresh here instead of full page reload
                // For now, we'll just log it
            }, 120000);
        });
    </script>
}

<style>
    .timeline {
        position: relative;
        padding-left: 30px;
    }

    .timeline-item {
        position: relative;
        padding-bottom: 20px;
    }

        .timeline-item:not(:last-child):before {
            content: '';
            position: absolute;
            left: -20px;
            top: 0;
            bottom: -20px;
            width: 2px;
            background-color: #e9ecef;
        }

    .timeline-marker {
        position: absolute;
        left: -30px;
        top: 0;
        width: 20px;
        height: 20px;
        border-radius: 50%;
        background-color: #0d6efd;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 0.7rem;
        z-index: 2;
    }

    .timeline-item.current .timeline-marker {
        background-color: #198754;
        animation: pulse 2s infinite;
    }

    .timeline-item.current-status .timeline-marker {
        background-color: #ffc107;
    }

    .timeline-content {
        background: #f8f9fa;
        padding: 15px;
        border-radius: 8px;
        border-left: 3px solid #0d6efd;
    }

    .timeline-item.current .timeline-content {
        border-left-color: #198754;
        background: #f0fff4;
    }

    .timeline-item.current-status .timeline-content {
        border-left-color: #ffc107;
        background: #fffbf0;
    }

    .timeline-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 5px;
    }

    .timeline-date {
        color: #6c757d;
        font-size: 0.875rem;
        white-space: nowrap;
        margin-left: 10px;
    }

    .status-badge {
        font-size: 0.75rem;
        padding: 0.35rem 0.65rem;
    }

    .text-warning {
        color: #ffc107 !important;
    }

    .text-success {
        color: #198754 !important;
    }

    .text-danger {
        color: #dc3545 !important;
    }

    .text-info {
        color: #0dcaf0 !important;
    }

    .btn-group-sm > .btn {
        padding: 0.25rem 0.5rem;
    }

    @@keyframes pulse {
        0% {
            transform: scale(1);
            box-shadow: 0 0 0 0 rgba(25, 135, 84, 0.7);
        }

        50% {
            transform: scale(1.05);
            box-shadow: 0 0 0 5px rgba(25, 135, 84, 0);
        }

        100% {
            transform: scale(1);
            box-shadow: 0 0 0 0 rgba(25, 135, 84, 0);
        }
    }

    @@media (max-width: 768px) {
        .timeline {
            padding-left: 20px;
        }

        .timeline-marker {
            left: -25px;
            width: 16px;
            height: 16px;
            font-size: 0.6rem;
        }

        .timeline-content {
            padding: 10px;
        }

        .timeline-header {
            flex-direction: column;
        }

        .timeline-date {
            margin-left: 0;
            margin-top: 5px;
        }

        .btn-group {
            flex-wrap: wrap;
        }
    }
</style>

@* Helper methods for C# code *@
@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "pending" or "under review" or "revision requested" => "bg-warning",
            "approved" or "coordinator approved" => "bg-success",
            "rejected" => "bg-danger",
            _ => "bg-secondary"
        };
    }

    public string GetStatusTextClass(string status)
    {
        return status?.ToLower() switch
        {
            "pending" or "under review" or "revision requested" => "text-warning",
            "approved" or "coordinator approved" => "text-success",
            "rejected" => "text-danger",
            _ => "text-secondary"
        };
    }
}