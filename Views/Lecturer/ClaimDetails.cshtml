@model ContractMonthlyClaimSystem.Models.Claim
@{
    ViewData["Title"] = "Claim Details";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 border-bottom">
    <h1 class="h2">Claim Details</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="@Url.Action("TrackStatus")" class="btn btn-sm btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Back to Claims
        </a>
    </div>
</div>

<!-- Display Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-lg-8">
        <!-- Claim Information Card -->
        <div class="card dashboard-card mb-4">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0"><i class="fas fa-file-invoice me-2"></i>Claim Information</h5>
                <span class="status-badge badge @GetStatusBadgeClass(Model.Status)">
                    @Model.Status
                </span>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-sm table-borderless">
                            <tr>
                                <th class="text-muted" style="width: 40%;">Claim ID:</th>
                                <td><strong>#@Model.ClaimID</strong></td>
                            </tr>
                            <tr>
                                <th class="text-muted">Submission Date:</th>
                                <td>@Model.SubmissionDate.ToString("dd MMMM yyyy")</td>
                            </tr>
                            <tr>
                                <th class="text-muted">Hours Worked:</th>
                                <td>@Model.HoursWorked hours</td>
                            </tr>
                            <tr>
                                <th class="text-muted">Amount:</th>
                                <td><strong class="text-success">@Model.Amount.ToString("C")</strong></td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <table class="table table-sm table-borderless">
                            <tr>
                                <th class="text-muted" style="width: 40%;">Lecturer:</th>
                                <td>@Model.Lecturer?.Name</td>
                            </tr>
                            <tr>
                                <th class="text-muted">Department:</th>
                                <td>@Model.Lecturer?.Department</td>
                            </tr>
                            <tr>
                                <th class="text-muted">Hourly Rate:</th>
                                <td>@(Model.Lecturer?.HourlyRate.ToString("C") ?? "N/A")</td>
                            </tr>
                            <tr>
                                <th class="text-muted">Payment Status:</th>
                                <td>
                                    @if (Model.IsPaid)
                                    {
                                        <span class="badge bg-success">Paid on @Model.PaymentDate?.ToString("dd MMM yyyy")</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Pending Payment</span>
                                    }
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.AdditionalNotes))
                {
                    <div class="mt-3">
                        <h6 class="text-muted">Additional Notes:</h6>
                        <div class="alert alert-light">
                            @Model.AdditionalNotes
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Timeline Card -->
        <div class="card dashboard-card mb-4">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0"><i class="fas fa-history me-2"></i>Claim Timeline</h5>
            </div>
            <div class="card-body">
                <div id="timelineContent">
                    <div class="text-center py-4">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2">Loading timeline...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <!-- Actions Card -->
        <div class="card dashboard-card mb-4">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0"><i class="fas fa-bolt me-2"></i>Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <button class="btn btn-outline-primary view-timeline-btn">
                        <i class="fas fa-history me-2"></i>View Full Timeline
                    </button>
                    
                    @if (Model.SupportingDocuments?.Any() == true)
                    {
                        <button class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#documentsModal">
                            <i class="fas fa-files me-2"></i>View Documents (@Model.SupportingDocuments.Count)
                        </button>
                    }
                    
                    @if (Model.Status == "Rejected")
                    {
                        <a href="@Url.Action("SubmitClaim")" class="btn btn-outline-warning">
                            <i class="fas fa-redo me-2"></i>Resubmit Claim
                        </a>
                    }
                    
                    @if (Model.Status == "Pending" || Model.Status == "Under Review")
                    {
                        <a href="@Url.Action("UploadDocuments", new { claimId = Model.ClaimID })" class="btn btn-outline-info">
                            <i class="fas fa-upload me-2"></i>Upload Documents
                        </a>
                    }
                    
                    <button class="btn btn-outline-secondary" onclick="window.print()">
                        <i class="fas fa-print me-2"></i>Print Details
                    </button>
                </div>
            </div>
        </div>

        <!-- Documents Summary -->
        <div class="card dashboard-card mb-4">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0"><i class="fas fa-file me-2"></i>Supporting Documents</h5>
            </div>
            <div class="card-body">
                @if (Model.SupportingDocuments?.Any() == true)
                {
                    <div class="list-group list-group-flush">
                        @foreach (var doc in Model.SupportingDocuments.Take(3))
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                <div>
                                    <i class="fas fa-file-@GetFileIcon(doc.FileName) text-primary me-2"></i>
                                    <small>@doc.FileName</small>
                                </div>
                                <div class="btn-group">
                                    <a href="@Url.Action("DownloadDocument", new { documentId = doc.DocumentID })" 
                                       class="btn btn-sm btn-outline-primary" target="_blank">
                                        <i class="fas fa-download"></i>
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                    
                    @if (Model.SupportingDocuments.Count > 3)
                    {
                        <div class="text-center mt-2">
                            <small class="text-muted">+@(Model.SupportingDocuments.Count - 3) more documents</small>
                        </div>
                    }
                    
                    <div class="text-center mt-3">
                        <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#documentsModal">
                            View All Documents
                        </button>
                    </div>
                }
                else
                {
                    <div class="text-center py-3">
                        <i class="fas fa-file-upload fa-2x text-muted mb-2"></i>
                        <p class="text-muted mb-2">No documents uploaded</p>
                        <a href="@Url.Action("UploadDocuments", new { claimId = Model.ClaimID })" class="btn btn-sm btn-outline-primary">
                            Upload Documents
                        </a>
                    </div>
                }
            </div>
        </div>

        <!-- Status Information -->
        <div class="card dashboard-card">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0"><i class="fas fa-info-circle me-2"></i>Status Information</h5>
            </div>
            <div class="card-body">
                <div class="alert @GetStatusAlertClass(Model.Status)">
                    <h6>Current Status: @Model.Status</h6>
                    <p class="mb-0 small">
                        @GetStatusDescription(Model.Status)
                    </p>
                </div>
                
                @if (Model.Status == "Rejected" && !string.IsNullOrEmpty(Model.AdditionalNotes))
                {
                    <div class="alert alert-danger">
                        <h6>Rejection Notes:</h6>
                        <p class="mb-0 small">@GetRejectionNotes(Model.AdditionalNotes)</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Documents Modal -->
<div class="modal fade" id="documentsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Supporting Documents - Claim #@Model.ClaimID</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>File Name</th>
                                <th>Type</th>
                                <th>Uploaded</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var doc in Model.SupportingDocuments)
                            {
                                <tr>
                                    <td>
                                        <i class="fas fa-file-@GetFileIcon(doc.FileName) text-primary me-2"></i>
                                        @doc.FileName
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@System.IO.Path.GetExtension(doc.FileName).ToUpper()</span>
                                    </td>
                                    <td>
                                        <small>@doc.UploadedDate.ToString("dd MMM yyyy HH:mm")</small>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("DownloadDocument", new { documentId = doc.DocumentID })" 
                                               class="btn btn-outline-primary" target="_blank">
                                                <i class="fas fa-download"></i>
                                            </a>
                                            @if (Model.Status == "Pending" || Model.Status == "Under Review")
                                            {
                                                <button class="btn btn-outline-danger" 
                                                        onclick="deleteDocument(@doc.DocumentID)">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Timeline Modal -->
<div class="modal fade" id="timelineModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Claim Timeline - #@Model.ClaimID</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="fullTimelineContent">
                    <!-- Full timeline will be loaded here -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Load timeline
            loadTimeline(@Model.ClaimID);
            
            // View full timeline modal
            $('.view-timeline-btn').click(function() {
                loadFullTimeline(@Model.ClaimID);
                $('#timelineModal').modal('show');
            });
        });

        function loadTimeline(claimId) {
            $.get('@Url.Action("GetClaimTimeline", "Lecturer")', { claimId: claimId })
                .done(function(response) {
                    if (response.success) {
                        displayTimeline(response.timeline, '#timelineContent');
                    } else {
                        $('#timelineContent').html(`
                            <div class="alert alert-danger">
                                <i class="fas fa-exclamation-circle me-2"></i>${response.message}
                            </div>
                        `);
                    }
                })
                .fail(function() {
                    $('#timelineContent').html(`
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle me-2"></i>Error loading timeline.
                        </div>
                    `);
                });
        }

        function loadFullTimeline(claimId) {
            $('#fullTimelineContent').html(`
                <div class="text-center py-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Loading timeline...</p>
                </div>
            `);

            $.get('@Url.Action("GetClaimTimeline", "Lecturer")', { claimId: claimId })
                .done(function(response) {
                    if (response.success) {
                        displayTimeline(response.timeline, '#fullTimelineContent');
                    } else {
                        $('#fullTimelineContent').html(`
                            <div class="alert alert-danger">
                                <i class="fas fa-exclamation-circle me-2"></i>${response.message}
                            </div>
                        `);
                    }
                })
                .fail(function() {
                    $('#fullTimelineContent').html(`
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle me-2"></i>Error loading timeline.
                        </div>
                    `);
                });
        }

        function displayTimeline(timeline, container) {
            if (!timeline || timeline.length === 0) {
                $(container).html(`
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>No timeline data available for this claim.
                    </div>
                `);
                return;
            }

            var html = '<div class="timeline">';
            timeline.forEach(function(item, index) {
                var isLast = index === timeline.length - 1;
                var isCurrent = item.action.includes('Status:');

                html += `
                    <div class="timeline-item ${isLast ? 'current' : ''} ${isCurrent ? 'current-status' : ''}">
                        <div class="timeline-marker">
                            <i class="${item.icon}"></i>
                        </div>
                        <div class="timeline-content">
                            <div class="timeline-header">
                                <strong>${item.action}</strong>
                                <span class="timeline-date">${item.date}</span>
                            </div>
                            <div class="timeline-body">
                                <small class="text-muted">By: ${item.user}</small>
                            </div>
                        </div>
                    </div>
                `;
            });
            html += '</div>';
            $(container).html(html);
        }

        function deleteDocument(documentId) {
            if (confirm('Are you sure you want to delete this document? This action cannot be undone.')) {
                $.post('@Url.Action("DeleteDocument", "Lecturer")', { documentId: documentId })
                    .done(function(response) {
                        if (response.success) {
                            location.reload(); // Reload to reflect changes
                        } else {
                            alert('Error: ' + response.message);
                        }
                    })
                    .fail(function() {
                        alert('Error deleting document.');
                    });
            }
        }

        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.alert').alert('close');
        }, 5000);
    </script>

    <style>
        .status-badge {
            font-size: 0.75rem;
            padding: 0.35rem 0.65rem;
        }

        .timeline {
            position: relative;
            padding-left: 30px;
        }

        .timeline-item {
            position: relative;
            padding-bottom: 20px;
        }

        .timeline-item:not(:last-child):before {
            content: '';
            position: absolute;
            left: -20px;
            top: 0;
            bottom: -20px;
            width: 2px;
            background-color: #e9ecef;
        }

        .timeline-marker {
            position: absolute;
            left: -30px;
            top: 0;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            background-color: #0d6efd;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 0.7rem;
            z-index: 2;
        }

        .timeline-item.current .timeline-marker {
            background-color: #198754;
            animation: pulse 2s infinite;
        }

        .timeline-content {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 8px;
            border-left: 3px solid #0d6efd;
        }

        .timeline-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 5px;
        }

        .timeline-date {
            color: #6c757d;
            font-size: 0.875rem;
            white-space: nowrap;
            margin-left: 10px;
        }

        @@keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }

        @@media print {
            .btn, .modal, .alert {
                display: none !important;
            }
            .card-header {
                background: white !important;
            }
        }
    </style>
}

@* Helper methods for C# code *@
@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "pending" or "under review" or "revision requested" => "bg-warning",
            "approved" or "coordinator approved" => "bg-success",
            "rejected" => "bg-danger",
            _ => "bg-secondary"
        };
    }

    public string GetStatusAlertClass(string status)
    {
        return status?.ToLower() switch
        {
            "pending" or "under review" or "revision requested" => "alert-warning",
            "approved" or "coordinator approved" => "alert-success",
            "rejected" => "alert-danger",
            _ => "alert-secondary"
        };
    }

    public string GetStatusDescription(string status)
    {
        return status?.ToLower() switch
        {
            "pending" => "Your claim is waiting for coordinator review.",
            "under review" => "Your claim is currently being reviewed by the coordinator.",
            "revision requested" => "The coordinator has requested additional information or revisions.",
            "coordinator approved" => "Your claim has been approved by the coordinator and is waiting for manager approval.",
            "approved" => "Your claim has been fully approved and is ready for payment processing.",
            "rejected" => "Your claim has been rejected. Please check the notes for more information.",
            _ => "Current status: " + status
        };
    }

    public string GetFileIcon(string fileName)
    {
        var extension = System.IO.Path.GetExtension(fileName).ToLower();
        return extension switch
        {
            ".pdf" => "pdf",
            ".doc" or ".docx" => "word",
            ".xls" or ".xlsx" => "excel",
            ".jpg" or ".jpeg" or ".png" => "image",
            _ => "alt"
        };
    }

    public string GetRejectionNotes(string additionalNotes)
    {
        // Extract rejection notes from additional notes
        if (additionalNotes.Contains("[Rejection Reason]"))
        {
            var startIndex = additionalNotes.IndexOf("[Rejection Reason]") + "[Rejection Reason]".Length;
            var endIndex = additionalNotes.IndexOf("\n", startIndex);
            if (endIndex == -1) endIndex = additionalNotes.Length;
            return additionalNotes.Substring(startIndex, endIndex - startIndex).Trim();
        }
        return additionalNotes;
    }
}