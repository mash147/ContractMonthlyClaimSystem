@model List<ContractMonthlyClaimSystem.Models.Claim>
@{
    ViewData["Title"] = "Claim History";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 border-bottom">
    <h1 class="h2">Claim History</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="@Url.Action("Dashboard")" class="btn btn-sm btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
        </a>
    </div>
</div>

<!-- Display Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Statistics Summary -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="card dashboard-card border-start border-primary border-4">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="text-xs fw-bold text-primary text-uppercase mb-1">Total Claims</div>
                        <div class="h5 mb-0 fw-bold text-gray-800">@Model.Count</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-file-invoice fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="card dashboard-card border-start border-success border-4">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="text-xs fw-bold text-success text-uppercase mb-1">Approved</div>
                        <div class="h5 mb-0 fw-bold text-gray-800">@Model.Count(c => c.Status == "Approved" || c.Status == "Coordinator Approved")</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="card dashboard-card border-start border-warning border-4">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="text-xs fw-bold text-warning text-uppercase mb-1">In Progress</div>
                        <div class="h5 mb-0 fw-bold text-gray-800">@Model.Count(c => c.Status == "Pending" || c.Status == "Under Review" || c.Status == "Revision Requested")</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-clock fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="card dashboard-card border-start border-danger border-4">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="text-xs fw-bold text-danger text-uppercase mb-1">Rejected</div>
                        <div class="h5 mb-0 fw-bold text-gray-800">@Model.Count(c => c.Status == "Rejected")</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-times-circle fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filters and Search -->
<div class="row mb-3">
    <div class="col-md-6">
        <div class="input-group">
            <span class="input-group-text"><i class="fas fa-search"></i></span>
            <input type="text" class="form-control" placeholder="Search claims..." id="searchInput">
            <button class="btn btn-outline-secondary" type="button" id="clearSearch">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <div class="col-md-6">
        <div class="d-flex justify-content-end">
            <div class="btn-group me-2">
                <button type="button" class="btn btn-sm btn-outline-primary active" data-filter="all">All</button>
                <button type="button" class="btn btn-sm btn-outline-warning" data-filter="pending">Pending</button>
                <button type="button" class="btn btn-sm btn-outline-success" data-filter="approved">Approved</button>
                <button type="button" class="btn btn-sm btn-outline-danger" data-filter="rejected">Rejected</button>
            </div>
            <div class="dropdown">
                <button class="btn btn-sm btn-success dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    <i class="fas fa-download me-1"></i>Export
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#" onclick="exportHistory('csv')"><i class="fas fa-file-csv me-2"></i>Export as CSV</a></li>
                    <li><a class="dropdown-item" href="#" onclick="exportHistory('excel')"><i class="fas fa-file-excel me-2"></i>Export as Excel</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Claims History Table -->
<div class="row">
    <div class="col-12">
        <div class="card dashboard-card">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0"><i class="fas fa-history me-2"></i>Complete Claim History</h5>
                <div class="text-muted">
                    <small>Last updated: @DateTime.Now.ToString("dd MMM yyyy HH:mm")</small>
                </div>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover" id="historyTable">
                            <thead class="table-light">
                                <tr>
                                    <th>Claim ID</th>
                                    <th>Submission Date</th>
                                    <th>Hours Worked</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                    <th>Last Activity</th>
                                    <th>Documents</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var claim in Model)
                                {
                                    <tr class="claim-row" data-status="@claim.Status.ToLower()">
                                        <td>
                                            <strong>#@claim.ClaimID</strong>
                                        </td>
                                        <td>@claim.SubmissionDate.ToString("dd MMM yyyy")</td>
                                        <td>@claim.HoursWorked</td>
                                        <td>
                                            <strong>@claim.Amount.ToString("C")</strong>
                                        </td>
                                        <td>
                                            <span class="status-badge badge @GetStatusBadgeClass(claim.Status)">
                                                @claim.Status
                                                @if (claim.Status == "Pending" || claim.Status == "Under Review")
                                                {
                                                    <i class="fas fa-clock ms-1"></i>
                                                }
                                                else if (claim.Status == "Approved" || claim.Status == "Coordinator Approved")
                                                {
                                                    <i class="fas fa-check ms-1"></i>
                                                }
                                                else if (claim.Status == "Rejected")
                                                {
                                                    <i class="fas fa-times ms-1"></i>
                                                }
                                            </span>
                                        </td>
                                        <td>
                                            @{
                                                var lastActivity = claim.AuditTrails?
                                                .OrderByDescending(a => a.Timestamp)
                                                .FirstOrDefault()?.Timestamp ?? claim.SubmissionDate;
                                                var activityText = claim.AuditTrails?
                                                .OrderByDescending(a => a.Timestamp)
                                                .FirstOrDefault()?.Action ?? "Submitted";
                                            }
                                            <small>
                                                <div>@lastActivity.ToString("dd MMM yy")</div>
                                                <div class="text-muted" style="font-size: 0.75rem;">@GetShortActivityText(activityText)</div>
                                            </small>
                                        </td>
                                        <td>
                                            @if (claim.SupportingDocuments?.Any() == true)
                                            {
                                                <div class="dropdown">
                                                    <button class="btn btn-sm btn-outline-success dropdown-toggle"
                                                            type="button" data-bs-toggle="dropdown"
                                                            data-claim-id="@claim.ClaimID" onclick="loadClaimDocuments(@claim.ClaimID, this)">
                                                        <i class="fas fa-file me-1"></i>@claim.SupportingDocuments.Count
                                                    </button>
                                                    <ul class="dropdown-menu" id="dropdown-@claim.ClaimID">
                                                        <li><div class="dropdown-item-text small text-muted">Loading documents...</div></li>
                                                    </ul>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">No documents</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a href="@Url.Action("ClaimDetails", new { id = claim.ClaimID })"
                                                   class="btn btn-outline-primary" data-bs-toggle="tooltip" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <button class="btn btn-outline-info view-timeline"
                                                        data-claim-id="@claim.ClaimID"
                                                        data-bs-toggle="tooltip" title="View Timeline">
                                                    <i class="fas fa-history"></i>
                                                </button>
                                                @if (claim.Status == "Rejected")
                                                {
                                                    <button class="btn btn-outline-warning resubmit-claim"
                                                            data-claim-id="@claim.ClaimID"
                                                            data-bs-toggle="tooltip" title="Resubmit Claim">
                                                        <i class="fas fa-redo"></i>
                                                    </button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Summary -->
                    <div class="mt-3 d-flex justify-content-between align-items-center">
                        <small class="text-muted">
                            Showing <span id="visibleCount">@Model.Count</span> of @Model.Count claims |
                            Total Amount: <strong>@Model.Where(c => c.Status == "Approved" || c.Status == "Coordinator Approved").Sum(c => c.Amount).ToString("C")</strong>
                        </small>
                        <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-outline-primary" onclick="window.print()">
                                <i class="fas fa-print me-1"></i>Print
                            </button>
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-history fa-4x text-muted mb-3"></i>
                        <h4 class="text-muted">No Claim History</h4>
                        <p class="text-muted">You haven't submitted any claims yet.</p>
                        <a href="@Url.Action("SubmitClaim")" class="btn btn-primary">
                            <i class="fas fa-plus-circle me-1"></i>Submit Your First Claim
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Timeline Modal -->
<div class="modal fade" id="timelineModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Claim Timeline - #<span id="timelineClaimId"></span></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="timelineContent">
                    <div class="text-center py-4">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2">Loading timeline...</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Resubmit Confirmation Modal -->
<div class="modal fade" id="resubmitModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Resubmit Claim</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to resubmit claim #<span id="resubmitClaimId"></span>?</p>
                <p class="text-muted">This will create a new claim with the same details and reset the approval process.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-warning" id="confirmResubmit">Resubmit Claim</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let currentResubmitClaimId = null;

        $(document).ready(function() {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Filter functionality
            $('[data-filter]').click(function() {
                var filter = $(this).data('filter');
                $('[data-filter]').removeClass('active');
                $(this).addClass('active');
                filterClaims();
            });

            // Search functionality
            $('#searchInput').on('input', function() {
                filterClaims();
            });

            // Clear search
            $('#clearSearch').click(function() {
                $('#searchInput').val('');
                filterClaims();
            });

            // Timeline modal
            $('.view-timeline').click(function() {
                var claimId = $(this).data('claim-id');
                $('#timelineClaimId').text(claimId);
                loadTimeline(claimId);
                $('#timelineModal').modal('show');
            });

            // Resubmit claim functionality
            $('.resubmit-claim').click(function() {
                currentResubmitClaimId = $(this).data('claim-id');
                $('#resubmitClaimId').text(currentResubmitClaimId);
                $('#resubmitModal').modal('show');
            });

            $('#confirmResubmit').click(function() {
                if (!currentResubmitClaimId) return;

                var $btn = $(this);
                $btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-1"></i>Resubmitting...');

                $.post('@Url.Action("ResubmitClaim", "Lecturer")', { claimId: currentResubmitClaimId })
                    .done(function(response) {
                        if (response.success) {
                            $('#resubmitModal').modal('hide');
                            showAlert('success', response.message);
                            setTimeout(function() {
                                window.location.reload();
                            }, 2000);
                        } else {
                            showAlert('danger', response.message);
                            $btn.prop('disabled', false).html('Resubmit Claim');
                        }
                    })
                    .fail(function() {
                        showAlert('danger', 'Error resubmitting claim. Please try again.');
                        $btn.prop('disabled', false).html('Resubmit Claim');
                    });
            });

            // Auto-dismiss alerts
            setTimeout(function() {
                $('.alert').alert('close');
            }, 5000);
        });

        function filterClaims() {
            var filter = $('[data-filter].active').data('filter');
            var searchText = $('#searchInput').val().toLowerCase();
            var visibleCount = 0;

            $('.claim-row').each(function() {
                var $row = $(this);
                var status = $row.data('status');
                var rowText = $row.text().toLowerCase();

                var matchesFilter = filter === 'all' || status === filter;
                var matchesSearch = searchText === '' || rowText.includes(searchText);

                if (matchesFilter && matchesSearch) {
                    $row.show();
                    visibleCount++;
                } else {
                    $row.hide();
                }
            });

            $('#visibleCount').text(visibleCount);
        }

        function loadClaimDocuments(claimId, button) {
            var $dropdown = $('#dropdown-' + claimId);
            $dropdown.html('<li><div class="dropdown-item-text small text-muted">Loading documents...</div></li>');

            $.get('@Url.Action("GetClaimDocumentsDropdown", "Lecturer")', { claimId: claimId })
                .done(function(response) {
                    if (response.success && response.documents.length > 0) {
                        $dropdown.empty();
                        response.documents.forEach(function(doc) {
                            $dropdown.append(
                                '<li><a class="dropdown-item small" href="' + doc.url + '" target="_blank">' +
                                '<i class="fas fa-file-' + doc.icon + ' me-2"></i>' + doc.name +
                                '</a></li>'
                            );
                        });
                    } else {
                        $dropdown.html('<li><div class="dropdown-item-text small text-muted">No documents</div></li>');
                    }
                })
                .fail(function() {
                    $dropdown.html('<li><div class="dropdown-item-text small text-danger">Error loading</div></li>');
                });
        }

        function loadTimeline(claimId) {
            $('#timelineContent').html(`
                <div class="text-center py-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Loading timeline...</p>
                </div>
            `);

            $.get('@Url.Action("GetClaimTimeline", "Lecturer")', { claimId: claimId })
                .done(function(response) {
                    if (response.success) {
                        displayTimeline(response.timeline);
                    } else {
                        $('#timelineContent').html(`
                            <div class="alert alert-danger">
                                <i class="fas fa-exclamation-circle me-2"></i>${response.message}
                            </div>
                        `);
                    }
                })
                .fail(function() {
                    $('#timelineContent').html(`
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle me-2"></i>Error loading timeline.
                        </div>
                    `);
                });
        }

        function displayTimeline(timeline) {
            if (!timeline || timeline.length === 0) {
                $('#timelineContent').html(`
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>No timeline data available.
                    </div>
                `);
                return;
            }

            var html = '<div class="timeline">';
            timeline.forEach(function(item, index) {
                var isLast = index === timeline.length - 1;
                var isCurrent = item.action.includes('Status:');

                html += `
                    <div class="timeline-item ${isLast ? 'current' : ''} ${isCurrent ? 'current-status' : ''}">
                        <div class="timeline-marker">
                            <i class="${item.icon}"></i>
                        </div>
                        <div class="timeline-content">
                            <div class="timeline-header">
                                <strong>${item.action}</strong>
                                <span class="timeline-date">${item.date}</span>
                            </div>
                            <div class="timeline-body">
                                <small class="text-muted">By: ${item.user}</small>
                            </div>
                        </div>
                    </div>
                `;
            });
            html += '</div>';
            $('#timelineContent').html(html);
        }

        function exportHistory(format) {
            window.location.href = '@Url.Action("ExportHistory", "Lecturer")?format=' + format;
        }

        function showAlert(type, message) {
            var alertClass = type === 'success' ? 'alert-success' : 'alert-danger';
            var icon = type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle';

            var alertHtml = `
                <div class="alert ${alertClass} alert-dismissible fade show" role="alert">
                    <i class="fas ${icon} me-2"></i>${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;

            $('.alert-dismissible').alert('close');
            setTimeout(function() {
                $('.border-bottom').after(alertHtml);
            }, 100);
        }
    </script>

    <style>
        .status-badge {
            font-size: 0.75rem;
            padding: 0.35rem 0.65rem;
        }

        .timeline {
            position: relative;
            padding-left: 30px;
        }

        .timeline-item {
            position: relative;
            padding-bottom: 20px;
        }

            .timeline-item:not(:last-child):before {
                content: '';
                position: absolute;
                left: -20px;
                top: 0;
                bottom: -20px;
                width: 2px;
                background-color: #e9ecef;
            }

        .timeline-marker {
            position: absolute;
            left: -30px;
            top: 0;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            background-color: #0d6efd;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 0.7rem;
            z-index: 2;
        }

        .timeline-item.current .timeline-marker {
            background-color: #198754;
            animation: pulse 2s infinite;
        }

        .timeline-content {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 8px;
            border-left: 3px solid #0d6efd;
        }

        .timeline-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 5px;
        }

        .timeline-date {
            color: #6c757d;
            font-size: 0.875rem;
            white-space: nowrap;
            margin-left: 10px;
        }

        @@keyframes pulse {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
            }

            100% {
                transform: scale(1);
            }
        }

        @@media print {
            .btn, .dropdown, .input-group, .alert {
                display: none !important;
            }

            .card-header {
                background: white !important;
                border-bottom: 2px solid #dee2e6;
            }
        }

        @@media (max-width: 768px) {
            .btn-group-sm > .btn {
                padding: 0.25rem 0.5rem;
                font-size: 0.75rem;
            }

            .table-responsive {
                font-size: 0.875rem;
            }
        }
    </style>
}

@* Helper methods for C# code *@
@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "pending" or "under review" or "revision requested" => "bg-warning",
            "approved" or "coordinator approved" => "bg-success",
            "rejected" => "bg-danger",
            _ => "bg-secondary"
        };
    }

    public string GetFileIcon(string fileName)
    {
        var extension = System.IO.Path.GetExtension(fileName).ToLower();
        return extension switch
        {
            ".pdf" => "pdf",
            ".doc" or ".docx" => "word",
            ".xls" or ".xlsx" => "excel",
            ".jpg" or ".jpeg" or ".png" => "image",
            _ => "alt"
        };
    }

    public string GetShortActivityText(string activity)
    {
        if (string.IsNullOrEmpty(activity)) return "Submitted";

        if (activity.Length > 30)
        {
            return activity.Substring(0, 30) + "...";
        }

        return activity;
    }
}