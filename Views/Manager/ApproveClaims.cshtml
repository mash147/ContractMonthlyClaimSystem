@model List<Claim>
@{
    ViewData["Title"] = "Approve Claims";
    Layout = "_ManagerLayout";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 border-bottom">
    <h1 class="h2">Approve Claims</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <select id="statusFilter" class="form-select form-select-sm">
                <option value="Coordinator Approved">Coordinator Approved</option>
                <option value="Pending">Pending</option>
                <option value="Approved">Approved</option>
                <option value="Rejected">Rejected</option>
                <option value="Under Review">Under Review</option>
            </select>
        </div>
        <div class="btn-group me-2">
            <button type="button" class="btn btn-sm btn-outline-secondary" id="refreshBtn" title="Refresh Data">
                <i class="fas fa-sync-alt"></i>
            </button>
        </div>
    </div>
</div>

<!-- Bulk Actions Panel -->
<div class="row mb-4" id="bulkActionsPanel" style="display: none;">
    <div class="col-12">
        <div class="card manager-card bg-light">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <i class="fas fa-bolt text-warning me-2"></i>
                        <strong id="selectedCount">0</strong> claims selected for bulk action
                    </div>
                    <div class="btn-group">
                        <button type="button" class="btn btn-sm btn-success" id="bulkApproveBtn">
                            <i class="fas fa-check-double me-1"></i>Approve Selected
                        </button>
                        <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#bulkRejectModal">
                            <i class="fas fa-times me-1"></i>Reject Selected
                        </button>
                        <button type="button" class="btn btn-sm btn-outline-secondary" id="clearSelectionBtn">
                            <i class="fas fa-times-circle me-1"></i>Clear Selection
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Status Summary Cards -->
<div class="row mb-4">
    <div class="col-xl-2 col-md-4 mb-3">
        <div class="card manager-card border-start border-warning border-4 status-card" data-status="Coordinator Approved">
            <div class="card-body text-center">
                <div class="h4 mb-0 fw-bold text-warning">@Model.Count(c => c.Status == "Coordinator Approved")</div>
                <small class="text-muted">Awaiting Final Approval</small>
            </div>
        </div>
    </div>
    <div class="col-xl-2 col-md-4 mb-3">
        <div class="card manager-card border-start border-info border-4 status-card" data-status="Under Review">
            <div class="card-body text-center">
                <div class="h4 mb-0 fw-bold text-info">@Model.Count(c => c.Status == "Under Review")</div>
                <small class="text-muted">Under Review</small>
            </div>
        </div>
    </div>
    <div class="col-xl-2 col-md-4 mb-3">
        <div class="card manager-card border-start border-success border-4 status-card" data-status="Approved">
            <div class="card-body text-center">
                <div class="h4 mb-0 fw-bold text-success">@Model.Count(c => c.Status == "Approved")</div>
                <small class="text-muted">Approved</small>
            </div>
        </div>
    </div>
    <div class="col-xl-2 col-md-4 mb-3">
        <div class="card manager-card border-start border-danger border-4 status-card" data-status="Rejected">
            <div class="card-body text-center">
                <div class="h4 mb-0 fw-bold text-danger">@Model.Count(c => c.Status == "Rejected")</div>
                <small class="text-muted">Rejected</small>
            </div>
        </div>
    </div>
    <div class="col-xl-2 col-md-4 mb-3">
        <div class="card manager-card border-start border-secondary border-4 status-card" data-status="Pending">
            <div class="card-body text-center">
                <div class="h4 mb-0 fw-bold text-secondary">@Model.Count(c => c.Status == "Pending")</div>
                <small class="text-muted">Pending</small>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card manager-card">
            <div class="card-body">
                <div class="btn-group w-100">
                    <button type="button" class="btn btn-outline-success" id="selectAllApproved">
                        <i class="fas fa-check-double me-1"></i>Select All Ready for Approval
                    </button>
                    <button type="button" class="btn btn-outline-info" id="quickStatsBtn">
                        <i class="fas fa-chart-bar me-1"></i>Quick Stats
                    </button>
                    <button type="button" class="btn btn-outline-warning" id="exportSelectionBtn">
                        <i class="fas fa-download me-1"></i>Export Selected
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Claims Table -->
<div class="card manager-card">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">
            <i class="fas fa-check-double me-2 text-warning"></i>Claims Management
            <span class="badge bg-warning ms-2">@Model.Count(c => c.Status == "Coordinator Approved") Ready for Final Approval</span>
        </h5>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="selectAll">
            <label class="form-check-label small" for="selectAll">Select All</label>
        </div>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover" id="claimsTable">
                    <thead class="table-light">
                        <tr>
                            <th width="30">
                                <input type="checkbox" id="selectAllHeader">
                            </th>
                            <th>Claim ID</th>
                            <th>Lecturer</th>
                            <th>Department</th>
                            <th>Hours</th>
                            <th>Amount</th>
                            <th>Submitted</th>
                            <th>Status</th>
                            <th>Coordinator</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model)
                        {
                            <tr data-status="@claim.Status" data-claim-id="@claim.ClaimID">
                                <td>
                                    <input type="checkbox" class="claim-checkbox" value="@claim.ClaimID"
                                           @(claim.Status != "Coordinator Approved" && claim.Status != "Under Review" ? "disabled" : "")>
                                </td>
                                <td>
                                    <strong>#@claim.ClaimID</strong>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm bg-primary rounded-circle me-2 d-flex align-items-center justify-content-center">
                                            <i class="fas fa-user text-white"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold">@claim.Lecturer?.Name</div>
                                            <small class="text-muted">@claim.Lecturer?.User?.EmployeeId</small>
                                        </div>
                                    </div>
                                </td>
                                <td>@claim.Lecturer?.Department</td>
                                <td>
                                    <span class="badge bg-light text-dark">@claim.HoursWorked hrs</span>
                                </td>
                                <td>
                                    <span class="fw-bold text-success">@claim.Amount.ToString("C")</span>
                                </td>
                                <td>@claim.SubmissionDate.ToString("dd MMM yyyy")</td>
                                <td>
                                    @switch (claim.Status)
                                    {
                                        case "Coordinator Approved":
                                            <span class="badge bg-warning"><i class="fas fa-check-double me-1"></i>Ready for Final Approval</span>
                                            break;
                                        case "Approved":
                                            <span class="badge bg-success"><i class="fas fa-check me-1"></i>Approved</span>
                                            break;
                                        case "Rejected":
                                            <span class="badge bg-danger"><i class="fas fa-times me-1"></i>Rejected</span>
                                            break;
                                        case "Under Review":
                                            <span class="badge bg-info"><i class="fas fa-search me-1"></i>Under Review</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@claim.Status</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    @{
                                        var coordinatorApproval = claim.AuditTrails?
                                        .FirstOrDefault(a => a.Action.Contains("Coordinator Approved"));
                                        if (coordinatorApproval != null)
                                        {
                                            <small>@coordinatorApproval.User?.FullName</small>
                                            <br>
                                            <small class="text-muted">@coordinatorApproval.Timestamp.ToString("dd MMM yy")</small>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">N/A</span>
                                        }
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("ClaimAnalysis", new { id = claim.ClaimID })"
                                           class="btn btn-sm btn-outline-primary" title="Analyze Claim" data-bs-toggle="tooltip">
                                            <i class="fas fa-chart-line"></i>
                                        </a>

                                        @if (claim.Status == "Coordinator Approved" || claim.Status == "Under Review")
                                        {
                                            <form method="post" asp-action="FinalApproveClaim" class="d-inline quick-approve-form">
                                                <input type="hidden" name="claimId" value="@claim.ClaimID" />
                                                <button type="submit" class="btn btn-sm btn-success"
                                                        onclick="return confirm('Grant final approval for claim #@claim.ClaimID?')"
                                                        title="Approve Claim" data-bs-toggle="tooltip">
                                                    <i class="fas fa-check-double"></i>
                                                </button>
                                            </form>

                                            <button type="button" class="btn btn-sm btn-danger reject-single-btn"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#rejectModal"
                                                    data-claim-id="@claim.ClaimID"
                                                    data-claim-amount="@claim.Amount.ToString("C")"
                                                    data-lecturer-name="@claim.Lecturer?.Name"
                                                    title="Reject Claim" data-bs-toggle="tooltip">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        }

                                        @if (claim.Status == "Pending")
                                        {
                                            <span class="badge bg-secondary">Awaiting Coordinator</span>
                                        }

                                        @if (claim.Status == "Approved" || claim.Status == "Rejected")
                                        {
                                            <button type="button" class="btn btn-sm btn-outline-info view-details-btn"
                                                    data-claim-id="@claim.ClaimID"
                                                    title="View Details" data-bs-toggle="tooltip">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-check-circle fa-4x text-success mb-3"></i>
                <h4 class="text-success">No Claims Found!</h4>
                <p class="text-muted">There are no claims matching the current filter criteria.</p>
                <a href="@Url.Action("ApproveClaims", new { status = "Coordinator Approved" })" class="btn btn-primary">
                    <i class="fas fa-list me-1"></i>View Claims Ready for Approval
                </a>
            </div>
        }
    </div>
</div>

<!-- Reject Claim Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Reject Claim</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-action="ManagerRejectClaim" id="rejectForm">
                <div class="modal-body">
                    <input type="hidden" name="claimId" id="rejectClaimId">
                    <div id="singleRejectInfo" class="mb-3 p-3 bg-light rounded">
                        <strong>Claim #<span id="rejectClaimNumber"></span></strong><br>
                        <small>Lecturer: <span id="rejectLecturerName"></span></small><br>
                        <small>Amount: <span id="rejectClaimAmount" class="text-success"></span></small>
                    </div>
                    <div class="mb-3">
                        <label for="rejectReason" class="form-label">Rejection Reason *</label>
                        <textarea class="form-control" id="rejectReason" name="reason" rows="4"
                                  placeholder="Please provide a detailed reason for rejecting this claim..." required></textarea>
                        <div class="form-text">This reason will be recorded in the audit trail and visible to the lecturer.</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Reject Claim</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Bulk Reject Modal -->
<div class="modal fade" id="bulkRejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Reject Selected Claims</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-action="BulkReject" id="bulkRejectForm">
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        You are about to reject <strong id="bulkRejectCount">0</strong> claims.
                    </div>
                    <div class="mb-3">
                        <label for="bulkRejectReason" class="form-label">Rejection Reason *</label>
                        <textarea class="form-control" id="bulkRejectReason" name="reason" rows="4"
                                  placeholder="Please provide a reason for rejecting these claims..." required></textarea>
                        <div class="form-text">This reason will be applied to all selected claims.</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Reject Selected Claims</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Quick Stats Modal -->
<div class="modal fade" id="quickStatsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-chart-bar me-2"></i>Quick Statistics</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <h6>Status Distribution</h6>
                                <canvas id="statusChart" height="200"></canvas>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <h6>Department Breakdown</h6>
                                <canvas id="departmentChart" height="200"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        $(document).ready(function() {
            // Initialize DataTable
            const table = $('#claimsTable').DataTable({
                pageLength: 25,
                order: [[1, 'desc']],
                language: {
                    search: "Search claims:",
                    lengthMenu: "Show _MENU_ claims"
                },
                columnDefs: [
                    { orderable: false, targets: [0, 9] }
                ]
            });

            // Status filter functionality
            $('#statusFilter').change(function() {
                const status = $(this).val();
                window.location.href = '@Url.Action("ApproveClaims")?status=' + status;
            });

            // Set current filter value
            $('#statusFilter').val('@ViewBag.CurrentStatus');

            // Status card click functionality
            $('.status-card').click(function() {
                const status = $(this).data('status');
                $('#statusFilter').val(status).trigger('change');
            });

            // Refresh button
            $('#refreshBtn').click(function() {
                const $btn = $(this);
                $btn.addClass('fa-spin');
                setTimeout(() => {
                    window.location.reload();
                }, 500);
            });

            // Selection functionality
            let selectedClaims = [];

            function updateSelectionUI() {
                const selectedCount = selectedClaims.length;
                $('#selectedCount').text(selectedCount);
                $('#bulkRejectCount').text(selectedCount);

                if (selectedCount > 0) {
                    $('#bulkActionsPanel').slideDown();
                    $('#bulkApproveBtn').prop('disabled', false);
                } else {
                    $('#bulkActionsPanel').slideUp();
                    $('#bulkApproveBtn').prop('disabled', true);
                }
            }

            // Select all functionality
            $('#selectAllHeader, #selectAll').change(function() {
                const isChecked = $(this).is(':checked');
                $('.claim-checkbox:not(:disabled)').prop('checked', isChecked).trigger('change');
            });

            // Individual checkbox handling
            $('.claim-checkbox').change(function() {
                const claimId = $(this).val();
                const isChecked = $(this).is(':checked');

                if (isChecked) {
                    if (!selectedClaims.includes(claimId)) {
                        selectedClaims.push(claimId);
                    }
                } else {
                    selectedClaims = selectedClaims.filter(id => id !== claimId);
                }

                updateSelectionUI();
            });

            // Clear selection
            $('#clearSelectionBtn').click(function() {
                selectedClaims = [];
                $('.claim-checkbox').prop('checked', false);
                updateSelectionUI();
            });

            // Select all ready for approval
            $('#selectAllApproved').click(function() {
                $('.claim-checkbox:not(:disabled)').prop('checked', true).trigger('change');
            });

            // Bulk approve
            $('#bulkApproveBtn').click(function() {
                if (selectedClaims.length === 0) {
                    showNotification('Please select at least one claim to approve.', 'warning');
                    return;
                }

                if (confirm(`Approve ${selectedClaims.length} selected claims?`)) {
                    $('#bulkApproveForm').remove();
                    $('body').append(`<form id="bulkApproveForm" method="post" action="@Url.Action("BulkApprove")" style="display: none;">
                        ${selectedClaims.map(id => `<input type="hidden" name="claimIds" value="${id}">`).join('')}
                    </form>`);
                    $('#bulkApproveForm').submit();
                }
            });

            // Bulk reject form submission
            $('#bulkRejectForm').submit(function(e) {
                if (selectedClaims.length === 0) {
                    e.preventDefault();
                    showNotification('Please select at least one claim to reject.', 'warning');
                    return;
                }

                // Add selected claim IDs to form
                selectedClaims.forEach(claimId => {
                    $(this).append(`<input type="hidden" name="claimIds" value="${claimId}">`);
                });

                return confirm(`Reject ${selectedClaims.length} selected claims?`);
            });

            // Single claim reject modal
            $('#rejectModal').on('show.bs.modal', function(event) {
                const button = $(event.relatedTarget);
                const claimId = button.data('claim-id');
                const claimAmount = button.data('claim-amount');
                const lecturerName = button.data('lecturer-name');

                $('#rejectClaimId').val(claimId);
                $('#rejectClaimNumber').text(claimId);
                $('#rejectClaimAmount').text(claimAmount);
                $('#rejectLecturerName').text(lecturerName);
                $('#rejectReason').val('');
            });

            // Quick stats modal
            $('#quickStatsBtn').click(function() {
                generateQuickStats();
                $('#quickStatsModal').modal('show');
            });

            // Export selection
            $('#exportSelectionBtn').click(function() {
                if (selectedClaims.length === 0) {
                    showNotification('Please select claims to export.', 'warning');
                    return;
                }
                // Implement export functionality here
                showNotification(`Export functionality for ${selectedClaims.length} claims would be implemented here.`, 'info');
            });

            // Quick approve forms
            $('.quick-approve-form').submit(function(e) {
                const $form = $(this);
                const claimId = $form.find('input[name="claimId"]').val();

                // Add visual feedback
                $form.closest('tr').addClass('table-success');
                setTimeout(() => {
                    $form.closest('tr').removeClass('table-success');
                }, 1000);
            });

            // View details button
            $('.view-details-btn').click(function() {
                const claimId = $(this).data('claim-id');
                window.location.href = '@Url.Action("ClaimAnalysis")' + '?id=' + claimId;
            });

            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            function generateQuickStats() {
                // Status distribution chart
                const statusCtx = document.getElementById('statusChart').getContext('2d');
                const statusChart = new Chart(statusCtx, {
                    type: 'doughnut',
                    data: {
                        labels: ['Ready for Approval', 'Under Review', 'Approved', 'Rejected', 'Pending'],
                        datasets: [{
                            data: [
                                @Model.Count(c => c.Status == "Coordinator Approved"),
                                @Model.Count(c => c.Status == "Under Review"),
                                @Model.Count(c => c.Status == "Approved"),
                                @Model.Count(c => c.Status == "Rejected"),
                                @Model.Count(c => c.Status == "Pending")
                            ],
                            backgroundColor: ['#ffc107', '#17a2b8', '#28a745', '#dc3545', '#6c757d']
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            legend: {
                                position: 'bottom'
                            }
                        }
                    }
                });

                // Department breakdown chart
                const deptData = {};
                @foreach (var claim in Model)
                {
                        @:deptData['@claim.Lecturer?.Department'] = (deptData['@claim.Lecturer?.Department'] || 0) + 1;
                }

                const deptCtx = document.getElementById('departmentChart').getContext('2d');
                const deptChart = new Chart(deptCtx, {
                    type: 'bar',
                    data: {
                        labels: Object.keys(deptData),
                        datasets: [{
                            label: 'Claims by Department',
                            data: Object.values(deptData),
                            backgroundColor: '#3498db'
                        }]
                    },
                    options: {
                        responsive: true,
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });
            }

            function showNotification(message, type) {
                const alertClass = type === 'success' ? 'alert-success' :
                                 type === 'warning' ? 'alert-warning' : 'alert-info';
                const icon = type === 'success' ? 'fa-check-circle' :
                            type === 'warning' ? 'fa-exclamation-triangle' : 'fa-info-circle';

                const notification = $(`
                    <div class="alert ${alertClass} alert-dismissible fade show mt-3" role="alert">
                        <i class="fas ${icon} me-2"></i>${message}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                `);

                $('main').prepend(notification);

                setTimeout(function() {
                    notification.alert('close');
                }, 5000);
            }

            // Auto-refresh every 2 minutes
            setInterval(() => {
                if (document.visibilityState === 'visible') {
                    window.location.reload();
                }
            }, 120000);
        });
    </script>
}

<style>
    .claim-checkbox:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    .status-card {
        cursor: pointer;
        transition: transform 0.2s;
    }

        .status-card:hover {
            transform: scale(1.05);
        }

    .table-success {
        background-color: #d1edff !important;
    }

    #bulkActionsPanel {
        transition: all 0.3s ease;
    }

    .avatar-sm {
        width: 32px;
        height: 32px;
    }

    .btn-group .btn {
        transition: all 0.2s ease;
    }

        .btn-group .btn:hover {
            transform: translateY(-1px);
        }
</style>