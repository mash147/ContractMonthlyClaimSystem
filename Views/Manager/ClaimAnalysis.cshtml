
@model Claim
@{
    ViewData["Title"] = "Claim Analysis - #" + Model.ClaimID;
    Layout = "_ManagerLayout";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 border-bottom">
    <h1 class="h2">Claim Analysis - #@Model.ClaimID</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="@Url.Action("ApproveClaims")" class="btn btn-sm btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Back to Claims
        </a>
    </div>
</div>

<div class="row">
    <!-- Claim Details -->
    <div class="col-lg-8">
        <div class="card manager-card mb-4">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0"><i class="fas fa-info-circle me-2"></i>Claim Details</h5>
                <span class="badge @GetStatusBadgeClass(Model.Status)">@Model.Status</span>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-sm">
                            <tr>
                                <th>Lecturer:</th>
                                <td>@Model.Lecturer?.Name</td>
                            </tr>
                            <tr>
                                <th>Department:</th>
                                <td>@Model.Lecturer?.Department</td>
                            </tr>
                            <tr>
                                <th>Hourly Rate:</th>
                                <td>@Model.Lecturer?.HourlyRate.ToString("C")</td>
                            </tr>
                            <tr>
                                <th>Contact Email:</th>
                                <td>@Model.Lecturer?.User?.Email</td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <table class="table table-sm">
                            <tr>
                                <th>Hours Worked:</th>
                                <td>@Model.HoursWorked</td>
                            </tr>
                            <tr>
                                <th>Total Amount:</th>
                                <td class="fw-bold text-success">@Model.Amount.ToString("C")</td>
                            </tr>
                            <tr>
                                <th>Submitted:</th>
                                <td>@Model.SubmissionDate.ToString("dd MMMM yyyy")</td>
                            </tr>
                            @if (ViewBag.ProcessingTime != null)
                            {
                                <tr>
                                    <th>Processing Time:</th>
                                    <td class="fw-bold text-info">@ViewBag.ProcessingTime.ToString("F1") days</td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.AdditionalNotes))
                {
                    <div class="mt-3">
                        <label class="form-label fw-bold">Additional Notes:</label>
                        <div class="border rounded p-3 bg-light">
                            @Model.AdditionalNotes
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Supporting Documents -->
        <div class="card manager-card mb-4">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-file me-2"></i>Supporting Documents
                    <span class="badge bg-primary ms-2">@(Model.SupportingDocuments?.Count ?? 0)</span>
                </h5>
            </div>
            <div class="card-body">
                @if (Model.SupportingDocuments?.Any() == true)
                {
                    <div class="list-group">
                        @foreach (var doc in Model.SupportingDocuments)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div class="flex-grow-1">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-file-@GetFileIcon(doc.FileName) text-primary me-3 fa-lg"></i>
                                        <div>
                                            <h6 class="mb-1">@doc.FileName</h6>
                                            <small class="text-muted">
                                                Uploaded: @doc.UploadedDate.ToString("dd MMM yyyy HH:mm")
                                            </small>
                                        </div>
                                    </div>
                                </div>
                                <div class="btn-group ms-3">
                                    <a href="@Url.Action("DownloadDocument", "Coordinator", new { documentId = doc.DocumentID })"
                                       class="btn btn-sm btn-outline-primary" data-bs-toggle="tooltip" title="Download">
                                        <i class="fas fa-download"></i>
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-file-excel fa-3x text-warning mb-3"></i>
                        <h5 class="text-warning">No Supporting Documents</h5>
                        <p class="text-muted">This claim has no supporting documents uploaded.</p>
                    </div>
                }
            </div>
        </div>

        <!-- Audit Trail -->
        <div class="card manager-card">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0"><i class="fas fa-history me-2"></i>Activity History</h5>
            </div>
            <div class="card-body">
                <div class="timeline">
                    @foreach (var audit in Model.AuditTrails.OrderByDescending(a => a.Timestamp))
                    {
                        <div class="timeline-item mb-3">
                            <div class="timeline-marker bg-@GetAuditColor(audit.Action)"></div>
                            <div class="timeline-content">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <strong>@audit.Action</strong>
                                        <div class="text-muted small">
                                            By: @audit.User?.FullName
                                        </div>
                                    </div>
                                    <span class="timeline-date text-muted small">
                                        @audit.Timestamp.ToString("dd MMM yyyy HH:mm")
                                    </span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Action Panel -->
    <div class="col-lg-4">
        <!-- Quick Actions -->
        <div class="card manager-card mb-4">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0"><i class="fas fa-bolt me-2"></i>Quick Actions</h5>
            </div>
            <div class="card-body">
                @if (Model.Status == "Coordinator Approved" || Model.Status == "Under Review")
                {
                    <form method="post" asp-action="FinalApproveClaim" class="mb-3">
                        <input type="hidden" name="claimId" value="@Model.ClaimID" />
                        <button type="submit" class="btn btn-success w-100"
                                onclick="return confirm('Grant final approval for claim #@Model.ClaimID?')">
                            <i class="fas fa-check-double me-1"></i>Final Approval
                        </button>
                    </form>

                    <button type="button" class="btn btn-danger w-100 mb-3" 
                            data-bs-toggle="modal" data-bs-target="#rejectModal">
                        <i class="fas fa-times me-1"></i>Reject Claim
                    </button>
                }
                else if (Model.Status == "Approved")
                {
                    <div class="alert alert-success text-center">
                        <i class="fas fa-check-circle fa-2x mb-2"></i>
                        <div>Claim Approved</div>
                        <small class="text-muted">Final approval granted</small>
                    </div>
                }
                else if (Model.Status == "Rejected")
                {
                    <div class="alert alert-danger text-center">
                        <i class="fas fa-times-circle fa-2x mb-2"></i>
                        <div>Claim Rejected</div>
                        <small class="text-muted">Not approved for payment</small>
                    </div>
                }

                <!-- Claim Summary -->
                <div class="border-top pt-3 mt-3">
                    <h6 class="text-muted mb-3">Claim Summary</h6>
                    <div class="row text-center">
                        <div class="col-6 mb-3">
                            <div class="text-primary fw-bold fs-5">@Model.HoursWorked</div>
                            <small class="text-muted">Hours</small>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="text-success fw-bold fs-5">@Model.Amount.ToString("C")</div>
                            <small class="text-muted">Amount</small>
                        </div>
                        <div class="col-6">
                            <div class="text-info fw-bold fs-5">@(Model.SupportingDocuments?.Count ?? 0)</div>
                            <small class="text-muted">Documents</small>
                        </div>
                        <div class="col-6">
                            <div class="text-warning fw-bold fs-5">@Model.AuditTrails.Count</div>
                            <small class="text-muted">Activities</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Similar Claims -->
        @if (ViewBag.SimilarClaims != null && ((List<Claim>)ViewBag.SimilarClaims).Any())
        {
            <div class="card manager-card">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0"><i class="fas fa-chart-line me-2"></i>Similar Claims</h5>
                </div>
                <div class="card-body">
                    @foreach (var similarClaim in (List<Claim>)ViewBag.SimilarClaims)
                    {
                        <div class="border-bottom pb-2 mb-2">
                            <div class="d-flex justify-content-between">
                                <strong>#@similarClaim.ClaimID</strong>
                                <span class="badge @GetStatusBadgeClass(similarClaim.Status)">@similarClaim.Status</span>
                            </div>
                            <div class="text-muted small">
                                @similarClaim.Amount.ToString("C") â€¢ @similarClaim.SubmissionDate.ToString("dd MMM yy")
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Reject Claim #@Model.ClaimID</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-action="ManagerRejectClaim">
                <div class="modal-body">
                    <input type="hidden" name="claimId" value="@Model.ClaimID">
                    <div class="mb-3">
                        <label class="form-label">Rejection Reason *</label>
                        <textarea name="reason" class="form-control" rows="4" required
                                  placeholder="Please provide a detailed reason for rejecting this claim..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Reject Claim</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}

<style>
    .timeline {
        position: relative;
        padding-left: 30px;
    }

    .timeline-item {
        position: relative;
        padding-bottom: 10px;
    }

    .timeline-item:not(:last-child):before {
        content: '';
        position: absolute;
        left: -20px;
        top: 0;
        bottom: -10px;
        width: 2px;
        background-color: #e9ecef;
    }

    .timeline-marker {
        position: absolute;
        left: -30px;
        top: 5px;
        width: 12px;
        height: 12px;
        border-radius: 50%;
    }

    .timeline-content {
        background: #f8f9fa;
        padding: 10px 15px;
        border-radius: 6px;
    }

    .timeline-date {
        color: #6c757d;
        font-size: 0.875rem;
    }
</style>

@functions {
    public string GetFileIcon(string fileName)
    {
        var extension = System.IO.Path.GetExtension(fileName).ToLower();
        return extension switch
        {
            ".pdf" => "pdf",
            ".doc" or ".docx" => "word",
            ".xls" or ".xlsx" => "excel",
            ".jpg" or ".jpeg" or ".png" or ".gif" => "image",
            _ => "alt"
        };
    }

    public string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "bg-warning",
            "Under Review" => "bg-info",
            "Coordinator Approved" => "bg-warning",
            "Approved" => "bg-success",
            "Rejected" => "bg-danger",
            "Revision Requested" => "bg-secondary",
            _ => "bg-secondary"
        };
    }

    public string GetAuditColor(string action)
    {
        return action.ToLower() switch
        {
            var a when a.Contains("approved") => "success",
            var a when a.Contains("rejected") => "danger",
            var a when a.Contains("revision") => "warning",
            var a when a.Contains("verified") => "info",
            _ => "primary"
        };
    }
}
