@{
    ViewData["Title"] = "Contract Monthly Claim System";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .hero-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 100px 0;
            text-align: center;
        }

        .feature-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transition: transform 0.3s ease;
            margin-bottom: 30px;
            height: 100%;
        }

            .feature-card:hover {
                transform: translateY(-5px);
            }

        .role-section {
            padding: 80px 0;
        }

        .role-card {
            text-align: center;
            padding: 30px;
            border-radius: 15px;
            background: #f8f9fa;
            height: 100%;
        }

        .icon-container {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
        }

            .icon-container i {
                font-size: 2rem;
                color: white;
            }

        .btn-primary-custom {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            padding: 12px 30px;
            border-radius: 25px;
            color: white;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-primary-custom:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
                color: white;
            }

        .stats-section {
            background: #f8f9fa;
            padding: 60px 0;
        }

        .stat-item {
            text-align: center;
        }

        .stat-number {
            font-size: 3rem;
            font-weight: bold;
            color: #667eea;
        }

        .navbar-brand {
            font-weight: bold;
            color: #667eea !important;
        }
    </style>
</head>
<body>
    <!-- Hero Section -->
    <section id="home" class="hero-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <h1 class="display-4 fw-bold mb-4">Contract Monthly Claim System</h1>
                    <p class="lead mb-4">Streamline your claim submission, verification, and approval processes with our comprehensive digital solution. Efficient, transparent, and user-friendly.</p>
                    <div class="d-flex gap-3 justify-content-center flex-wrap">
                        <a href="@Url.Action("Login", "Home")" class="btn btn-light btn-lg">
                            <i class="fas fa-rocket me-2"></i>Get Started
                        </a>
                        <a href="#features" class="btn btn-outline-light btn-lg">
                            <i class="fas fa-play-circle me-2"></i>Learn More
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-5 fw-bold">Key Features</h2>
                <p class="lead text-muted">Comprehensive tools designed to simplify claim management</p>
            </div>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card feature-card">
                        <div class="card-body text-center p-4">
                            <div class="icon-container">
                                <i class="fas fa-paper-plane"></i>
                            </div>
                            <h4 class="card-title">Easy Claim Submission</h4>
                            <p class="card-text">Lecturers can submit claims with a single click, including document uploads and automatic calculation of payments.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card feature-card">
                        <div class="card-body text-center p-4">
                            <div class="icon-container">
                                <i class="fas fa-check-double"></i>
                            </div>
                            <h4 class="card-title">Streamlined Approval</h4>
                            <p class="card-text">Programme Coordinators and Managers can efficiently verify and approve claims with automated workflows.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card feature-card">
                        <div class="card-body text-center p-4">
                            <div class="icon-container">
                                <i class="fas fa-file-upload"></i>
                            </div>
                            <h4 class="card-title">Document Management</h4>
                            <p class="card-text">Secure document upload with support for PDF, DOCX, and XLSX formats. File validation and secure storage included.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card feature-card">
                        <div class="card-body text-center p-4">
                            <div class="icon-container">
                                <i class="fas fa-chart-line"></i>
                            </div>
                            <h4 class="card-title">Real-time Tracking</h4>
                            <p class="card-text">Transparent status tracking from submission to settlement with real-time updates and comprehensive audit trails.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card feature-card">
                        <div class="card-body text-center p-4">
                            <div class="icon-container">
                                <i class="fas fa-cogs"></i>
                            </div>
                            <h4 class="card-title">Automated Processing</h4>
                            <p class="card-text">Auto-calculation of payments, validation checks, and automated approval workflows for efficient processing.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card feature-card">
                        <div class="card-body text-center p-4">
                            <div class="icon-container">
                                <i class="fas fa-shield-alt"></i>
                            </div>
                            <h4 class="card-title">Secure & Reliable</h4>
                            <p class="card-text">Role-based access control, comprehensive error handling, and unit testing ensure system reliability.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- User Roles Section -->
    <section id="roles" class="role-section bg-light">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-5 fw-bold">User Roles</h2>
                <p class="lead text-muted">Tailored experiences for different stakeholders</p>
            </div>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="role-card">
                        <div class="icon-container">
                            <i class="fas fa-chalkboard-teacher"></i>
                        </div>
                        <h4>Lecturer</h4>
                        <p class="text-muted">Submit claims, upload supporting documents, and track claim status in real-time with automated calculation features.</p>
                        <ul class="list-unstyled text-start">
                            <li><i class="fas fa-check text-success me-2"></i>Easy claim submission</li>
                            <li><i class="fas fa-check text-success me-2"></i>Document upload</li>
                            <li><i class="fas fa-check text-success me-2"></i>Status tracking</li>
                            <li><i class="fas fa-check text-success me-2"></i>Auto-calculation</li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="role-card">
                        <div class="icon-container">
                            <i class="fas fa-user-tie"></i>
                        </div>
                        <h4>Programme Coordinator</h4>
                        <p class="text-muted">Review and verify claims, ensure compliance with policies, and provide initial approval with automated workflow checks.</p>
                        <ul class="list-unstyled text-start">
                            <li><i class="fas fa-check text-success me-2"></i>Claim verification</li>
                            <li><i class="fas fa-check text-success me-2"></i>Policy compliance</li>
                            <li><i class="fas fa-check text-success me-2"></i>Initial approval</li>
                            <li><i class="fas fa-check text-success me-2"></i>Workflow management</li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="role-card">
                        <div class="icon-container">
                            <i class="fas fa-user-cog"></i>
                        </div>
                        <h4>Academic Manager</h4>
                        <p class="text-muted">Final approval authority, comprehensive oversight, and access to reporting features for strategic decision-making.</p>
                        <ul class="list-unstyled text-start">
                            <li><i class="fas fa-check text-success me-2"></i>Final approval</li>
                            <li><i class="fas fa-check text-success me-2"></i>Oversight & reporting</li>
                            <li><i class="fas fa-check text-success me-2"></i>Audit trails</li>
                            <li><i class="fas fa-check text-success me-2"></i>Strategic insights</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="stats-section">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-3">
                    <div class="stat-item">
                        <div class="stat-number">500+</div>
                        <p class="text-muted">Active Users</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-item">
                        <div class="stat-number">1,200+</div>
                        <p class="text-muted">Claims Processed</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-item">
                        <div class="stat-number">99%</div>
                        <p class="text-muted">Satisfaction Rate</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-item">
                        <div class="stat-number">24/7</div>
                        <p class="text-muted">System Availability</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-dark text-white py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5><i class="fas fa-file-invoice-dollar me-2"></i>CMCS</h5>
                    <p>Streamlining claim management for educational institutions.</p>
                </div>
                <div class="col-md-6 text-end">
                    <p>&copy; 2025 Contract Monthly Claim System. All rights reserved.</p>
                    <div class="d-flex justify-content-end gap-3">
                        <a href="#" class="text-white"><i class="fab fa-linkedin fa-lg"></i></a>
                        <a href="#" class="text-white"><i class="fab fa-twitter fa-lg"></i></a>
                        <a href="#" class="text-white"><i class="fab fa-github fa-lg"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
</body>
</html>